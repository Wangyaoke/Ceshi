<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:paddingTop="21dp"
        android:background="@mipmap/public_bg"
        >
        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/point_back_white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="页面标题"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/txt_size_seventeen"
            android:textColor="@color/white"
            android:paddingTop="10dp"
            />
        <TextView
            android:id="@+id/text_putOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="编辑"
            android:textSize="@dimen/txt_size_fourteen"
            android:layout_alignParentRight="true"
            android:paddingTop="11dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:visibility="gone"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/subscribe_item_disabled_bg_day"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</FrameLayout>