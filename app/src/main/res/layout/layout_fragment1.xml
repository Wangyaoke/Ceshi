<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">
    <include
        android:id="@+id/relative"
        layout="@layout/layout_top" />
    <LinearLayout
        android:layout_below="@+id/relative"
        android:id="@+id/line_visibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/relative_fragment_lable"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center">
            <RadioGroup
                android:id="@+id/icon_mainAcitivity"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:gravity="center">
                <RadioButton
                    android:id="@+id/icon1_mainAcitivity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:layout_weight="1"
                    android:drawablePadding="7dp"
                    android:drawableTop="@mipmap/sy"
                    android:textColor="@color/sy_Radiubutton"
                    android:gravity="center|bottom"
                    android:paddingBottom="5dp"
                    android:textSize="@dimen/txt_size_twelve"
                    android:background="#00000000"
                    android:text="公开招标"
                    android:paddingTop="5dp"
                    />
                <RadioButton
                    android:id="@+id/icon2_mainAcitivity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:layout_weight="1"
                    android:drawablePadding="7dp"
                    android:drawableTop="@mipmap/sy2"
                    android:textColor="@color/sy_Radiubutton"
                    android:gravity="center|bottom"
                    android:paddingBottom="5dp"
                    android:textSize="@dimen/txt_size_twelve"
                    android:background="#00000000"
                    android:text="采购需求"
                    android:paddingTop="5dp"
                    />

                <RadioButton
                    android:id="@+id/icon3_mainAcitivity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:layout_weight="1"
                    android:drawablePadding="7dp"
                    android:textColor="@color/sy_Radiubutton"
                    android:paddingBottom="5dp"
                    android:background="#00000000"
                    android:drawableTop="@mipmap/sy3"
                    android:textSize="@dimen/txt_size_twelve"
                    android:gravity="center|bottom"
                    android:text="涉密采购"
                    android:paddingTop="5dp"
                    />
                <RadioButton
                    android:id="@+id/icon4_mainAcitivity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:layout_weight="1"
                    android:drawablePadding="7dp"
                    android:textColor="@color/sy_Radiubutton"
                    android:paddingBottom="5dp"
                    android:background="#00000000"
                    android:drawableTop="@mipmap/sy4"
                    android:textSize="@dimen/txt_size_twelve"
                    android:gravity="center|bottom"
                    android:text="单一来源公示"
                    android:paddingTop="5dp"
                    />
                <RadioButton
                    android:id="@+id/icon5_mainAcitivity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:layout_weight="1"
                    android:drawablePadding="7dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/sy_Radiubutton"
                    android:background="#00000000"
                    android:drawableTop="@mipmap/icon_sixteen"
                    android:textSize="@dimen/txt_size_twelve"
                    android:gravity="center|bottom"
                    android:text="更多"
                    android:paddingTop="5dp"
                    />
            </RadioGroup>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/subscribe_item_drag_bg_day"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/line_qiye"
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@color/white"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/line_text"
                    android:src="@mipmap/qiye" />
                <TextView
                    android:layout_marginLeft="15dp"
                    android:id="@+id/title_qyml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="企业名录"
                    android:layout_gravity="center"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/txt_size_fourteen" />
            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="11dp"
                android:background="@color/line_color" />
            <LinearLayout
                android:id="@+id/line_cpml"
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@color/white"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/line_text"
                    android:src="@mipmap/cpml" />
                <TextView
                    android:layout_marginLeft="15dp"
                    android:id="@+id/title_cpml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品名录"
                    android:gravity="center"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/txt_size_fourteen" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/subscribe_item_drag_bg_day"></View>
        <!--轮播图-->
        <include layout="@layout/flybanner_recyclerview_layout"></include>

    </LinearLayout>
    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_empty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_txt_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂时没有记录"
        android:textColor="@color/gray_dan"
        android:textSize="@dimen/txt_size_fifteen"
        android:layout_below="@id/iv_empty"
        android:layout_marginTop="47dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/iv_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_repeat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/text_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>