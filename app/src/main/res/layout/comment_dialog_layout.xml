<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/subscribe_item_disabled_bg_day"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="取消"
            android:textColor="@color/tab_1_day"
            android:paddingLeft="15dp"
            android:paddingTop="13dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:textSize="@dimen/txt_size_fifteen" />
        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:clickable="false"
            android:text="保存"
            android:paddingBottom="10dp"
            android:paddingTop="13dp"
            android:paddingLeft="15dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/tab_1_day"
            android:textSize="@dimen/txt_size_fifteen" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/et_comment"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:gravity="left|top"
            android:hint="请输入简介内容"
            android:text=""
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:inputType="textMultiLine"
            android:background="@color/white"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/textCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5/12"
            android:textSize="@dimen/txt_size_twelve"
            android:textColor="@color/gray_dan"
            android:layout_alignBottom="@id/et_comment"
            android:layout_alignRight="@id/et_comment"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            />
    </RelativeLayout>



</LinearLayout>