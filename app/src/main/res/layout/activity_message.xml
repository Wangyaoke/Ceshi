<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/subscribe_item_disabled_bg_day"
    tools:context="com.ansiyida.cgjl.activity.MessageActivity">
    <include
        android:id="@+id/include"
        layout="@layout/second_view_top8"
        />
    <com.andview.refreshview.XRefreshView
        android:id="@+id/xrefreshView_messageActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0.1dp"
        android:layout_below="@id/include"
        >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleView_messageActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    </com.andview.refreshview.XRefreshView>
    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/null_one3x"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂时没有记录"
        android:textColor="@color/gray_dan"
        android:textSize="@dimen/txt_size_fifteen"
        android:layout_below="@id/iv_empty"
        android:layout_marginTop="47dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />
</RelativeLayout>
