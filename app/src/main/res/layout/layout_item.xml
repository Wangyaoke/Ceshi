<?xml version="1.0" encoding="utf-8"?>
<com.ansiyida.cgjl.view.SlidingButtonView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F8F9FB">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F8F9FB"/>
        <RelativeLayout
            android:layout_below="@id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/layout_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/mine_dy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_weight="1"
                            android:text="招采信息01"
                            android:textColor="@color/text_black"
                            android:textSize="16sp" />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                           <TextView
                               android:layout_width="100dp"
                               android:layout_height="50dp"
                               android:rotation="30"
                               android:transformPivotY="70dp"
                               android:transformPivotX="110dp"
                               android:background="@color/text_blue"
                               />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:text="对接99条"
                                android:id="@+id/text_hd"
                                android:rotation="30"
                                android:textColor="@color/white"
                                android:layout_marginTop="8dp"
                                android:layout_marginLeft="51dp"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/key_line"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"

                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关键词:"
                            android:id="@+id/key_lable"
                            android:textColor="@color/text_tile"
                            android:textSize="15sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关键词:"
                            android:id="@+id/keyword_dy1"
                            android:textColor="@color/text_black"
                            android:textSize="13sp"
                            android:background="@drawable/shape_dy"
                            android:layout_marginLeft="5dp"

                            android:ellipsize="end"
                            android:paddingLeft="11dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:paddingRight="11dp"
                            android:visibility="gone"
                            android:maxLines="1"
                            />
                        <TextView
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关键词:"

                            android:ellipsize="end"
                            android:id="@+id/keyword_dy2"
                            android:textColor="@color/text_black"
                            android:textSize="13sp"
                            android:background="@drawable/shape_dy1"
                            android:layout_marginLeft="5dp"
                            android:visibility="gone"
                            android:paddingLeft="11dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:paddingRight="11dp"
                            />
                        <TextView
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关键词:"

                            android:ellipsize="end"
                            android:id="@+id/keyword_dy3"
                            android:textColor="@color/text_black"
                            android:textSize="13sp"
                            android:background="@drawable/shape_dy2"
                            android:layout_marginLeft="5dp"
                            android:paddingLeft="11dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:paddingRight="11dp"
                            android:visibility="gone"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="关键词:"
                            android:id="@+id/keyword_dy4"
                            android:textColor="@color/text_black"
                            android:textSize="13sp"
                            android:background="@drawable/shape_dy"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:paddingLeft="11dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:paddingRight="11dp"
                            android:visibility="gone"
                            android:maxLines="1"
                            />
                        <TextView
                            android:maxLines="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="关键词:"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:id="@+id/keyword_dy5"
                            android:textColor="@color/text_black"
                            android:textSize="13sp"
                            android:background="@drawable/shape_dy1"
                            android:layout_marginLeft="5dp"
                            android:visibility="gone"
                            android:paddingLeft="11dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:paddingRight="11dp"
                            />
                        <TextView
                            android:maxLines="1"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="关键词:"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:id="@+id/keyword_dy6"
                            android:textColor="@color/text_black"
                            android:textSize="13sp"
                            android:background="@drawable/shape_dy2"
                            android:layout_marginLeft="5dp"
                            android:paddingLeft="11dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:paddingRight="11dp"
                            android:visibility="gone"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/dj_line"
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已对接:"
                            android:textColor="@color/text_tile"
                            android:textSize="16sp"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0条"
                            android:id="@+id/dj_cg"
                            android:textColor="@color/text_black"
                            android:textSize="16sp"
                            android:layout_marginLeft="11dp"
                            android:maxLines="1"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/dq_line"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="地区:"
                            android:textColor="@color/text_tile"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关键词:"
                            android:id="@+id/sheng"
                            android:textColor="@color/text_black"
                            android:textSize="15sp"
                            android:layout_marginLeft="11dp"
                            android:maxLines="1"
                            />



                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/type_line"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="信息类型:"
                            android:textColor="@color/text_tile"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="信息类型:"
                            android:id="@+id/type"
                            android:textColor="@color/text_black"
                            android:textSize="15sp"
                            android:maxLines="1"
                            android:layout_marginLeft="11dp"

                            />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/souce_line"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="来源网站:"
                            android:textColor="@color/text_tile"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="信息类型:"
                            android:id="@+id/souce"
                            android:textColor="@color/text_black"
                            android:textSize="15sp"
                            android:maxLines="1"
                            android:layout_marginLeft="11dp"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/textreadtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018年4月5日 更新 "
                        android:textColor="@color/text_tile"
                        android:textSize="12sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:paddingBottom="13dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_toRightOf="@+id/layout_content"
                    android:id="@+id/line_read"
                    android:orientation="horizontal"
                    android:layout_width="160dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/line_del"

                        android:layout_height="wrap_content" >
                        <ImageView
                            android:id="@+id/iv_del"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_delete3x"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="删除"
                            android:id="@+id/del"
                            android:textColor="@color/text_blue"
                            android:textSize="13sp"

                            />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/line_write">
                        <ImageView
                            android:id="@+id/iv_write"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_edit"

                            android:background="@drawable/shape_circle"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="编辑"
                            android:id="@+id/write"
                            android:textColor="@color/text_blue"
                            android:textSize="13sp"

                            />
                    </LinearLayout>
                </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</com.ansiyida.cgjl.view.SlidingButtonView>
