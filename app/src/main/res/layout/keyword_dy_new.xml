<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/relative"
        layout="@layout/dy_top"
        />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="11dp"

        android:background="@color/line_color"
        android:id="@+id/line_dy"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"

        >
        <EditText
            android:id="@+id/editText_phone"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@null"
            android:inputType="text"
            android:hint="添加关键词"
            android:textSize="@dimen/txt_size_fourteen"
            android:paddingLeft="20dp"
            android:textColor="@color/text_black"
            android:textColorHint="#d6e2e9"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/subscribe_item_disabled_bg_day"
        />
    <com.ansiyida.cgjl.view.MyGridView
        android:id="@+id/gridViewBottom_fragment3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="0dp"
        android:numColumns="4" />

</LinearLayout>