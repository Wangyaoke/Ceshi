<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.ansiyida.cgjl.activity.YanTaoActivity">
    <com.andview.refreshview.XRefreshView
        android:id="@+id/xrefreshView_yanTaoActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="42dp"
        >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_yanTaoActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    </com.andview.refreshview.XRefreshView>
    <RelativeLayout
        android:id="@+id/relative_top"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/white"
        android:layout_marginTop="23dp"
        >
        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/point_back_black"
            android:paddingLeft="15dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="15dp"
            />

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_centerVertical="true"
           android:layout_centerHorizontal="true"
           >
           <ImageView
               android:id="@+id/iv_touXiang"
               android:layout_width="29dp"
               android:layout_height="29dp"
               android:src="@mipmap/default_touxiang"
               android:layout_centerVertical="true"
               android:layout_marginRight="5dp"
               />
           <TextView
               android:id="@+id/tv_userName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="XXXX"
               android:layout_gravity="center_vertical"

               />
       </LinearLayout>


    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linear_bottom"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/subscribe_item_disabled_bg_day"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/linear_guanDian"
            android:layout_width="0dp"
            android:layout_height="@dimen/def_height"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/guandian_guan"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="写观点"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_zan"
            android:layout_width="0dp"
            android:layout_height="@dimen/def_height"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/iv_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zan1"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/tv_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞0"
                android:paddingTop="1dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_report"
            android:layout_width="0dp"
            android:layout_height="@dimen/def_height"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/guandian_report"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="举报"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
