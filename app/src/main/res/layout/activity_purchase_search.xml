<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <RelativeLayout
        android:id="@+id/search_rel"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <ImageView
            android:id="@+id/back_Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/point_back"
            android:background="#00000000"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/shaixuan"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="筛选"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:layout_toLeftOf="@id/shaixuan"
            android:layout_toRightOf="@id/back_Image"
            android:paddingHorizontal="15dp"
            android:id="@+id/relative"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/shape_seach_law"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginRight="30dp">
            <EditText
                android:id="@+id/edittext_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/shape_edittext"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/shape_search_bg"
                android:hint="请输入想要搜索的法规名称或内容"
                android:imeOptions="actionSearch"
                android:paddingLeft="35dp"
                android:paddingRight="45dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/txt_color_day"
                android:textColorHint="@color/black_gray"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:src="@mipmap/icon_search" />
            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_alignRight="@id/edittext_search"
                android:src="@mipmap/frag1_icon_delete" />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/type_lin"
        android:layout_below="@id/search_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="15dp">
        <TextView
            android:id="@+id/search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜标题"
            android:textSize="14sp"
            android:textColor="@color/area_btn_textcolor"
            android:gravity="center"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/search_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜全文"
            android:textSize="14sp"
            android:gravity="center"/>
    </LinearLayout>
    <View
        android:id="@+id/search_view"
        android:layout_marginVertical="5dp"
        android:layout_below="@id/type_lin"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/area_btn"/>
    <com.andview.refreshview.XRefreshView
        android:id="@+id/P_xrefreshView"
        android:layout_below="@id/search_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/P_search_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </com.andview.refreshview.XRefreshView>

    <RelativeLayout
        android:id="@+id/noText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/search_view"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:id="@+id/noText_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_empty"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/noText_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 没有查询到您需要的内容！"
            android:textSize="16sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/no_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/search_view"
        android:gravity="center"
        android:visibility="gone">
        <TextView
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="目前您还没搜索"
            android:textSize="16sp"/>
    </RelativeLayout>
</RelativeLayout>