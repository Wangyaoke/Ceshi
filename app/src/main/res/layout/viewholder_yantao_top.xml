<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="192dp"
            >
            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/subscribe_item_disabled_bg_day"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/yantao_mengban"
                />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXX"
                android:textSize="@dimen/txt_size_seventeen"
                android:textColor="@color/white"
                android:layout_marginLeft="12dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="40dp"
                android:maxLines="6"
                android:ellipsize="end"
                />
            <LinearLayout
                android:id="@+id/linear_tab"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_alignTop="@+id/msg"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="15dp"
                >

                <TextView
                    android:id="@+id/tab1"
                    android:layout_width="53dp"
                    android:layout_height="21dp"
                    android:text="军事"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_twelve"
                    android:background="@drawable/shape_mine_tab"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginRight="9dp"
                    />
                <TextView
                    android:id="@+id/tab2"
                    android:layout_width="53dp"
                    android:layout_height="21dp"
                    android:text="法律"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_twelve"
                    android:background="@drawable/shape_mine_tab"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginRight="9dp"
                    />
                <TextView
                    android:id="@+id/tab3"
                    android:layout_width="53dp"
                    android:layout_height="21dp"
                    android:text="综合实力"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_twelve"
                    android:background="@drawable/shape_mine_tab"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginRight="9dp"
                    />
                <TextView
                    android:id="@+id/tab4"
                    android:layout_width="53dp"
                    android:layout_height="21dp"
                    android:text="生物"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_twelve"
                    android:background="@drawable/shape_mine_tab"
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_marginRight="9dp"
                    />
                <TextView
                    android:id="@+id/tab5"
                    android:layout_width="53dp"
                    android:layout_height="21dp"
                    android:text="环境"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_twelve"
                    android:visibility="gone"
                    android:background="@drawable/shape_mine_tab"
                    android:gravity="center"
                    />
                <!--<ImageView-->
                <!--android:id="@+id/text_edit"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@mipmap/icon_edit2"-->
                <!--android:paddingRight="14dp"-->
                <!--android:paddingLeft="9dp"-->
                <!--android:paddingTop="2dp"-->
                <!--android:paddingBottom="2dp"-->

                <!--/>-->
            </LinearLayout>
            <ImageView
                android:id="@+id/image_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/point_back_white2"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:paddingTop="6dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            >
            <ImageView
                android:id="@+id/iv_touXiang"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:src="@mipmap/man_default_touxiang"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXXX"
                android:textColor="@color/gray_dan"
                android:textSize="@dimen/txt_size_twelve"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="48dp"
                />
            <TextView
                android:id="@+id/tv_mineYanLun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
                android:textSize="@dimen/txt_size_fifteen"
                android:textColor="@color/txt_color_dark"
                android:layout_marginLeft="44dp"
                android:ellipsize="end"
                android:layout_marginRight="27dp"
                android:layout_marginTop="51dp"
                />
            <TextView
                android:id="@+id/tv_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全文"
                android:textSize="@dimen/txt_size_thirteen"
                android:textColor="@color/tab_2_day"
                android:layout_alignRight="@id/tv_mineYanLun"
                android:layout_below="@id/tv_mineYanLun"
                android:clickable="true"
                android:padding="3dp"
                />
            <TextView
                android:id="@+id/tv_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收起"
                android:clickable="true"
                android:visibility="gone"
                android:textSize="@dimen/txt_size_thirteen"
                android:textColor="@color/tab_2_day"
                android:layout_alignRight="@id/tv_mineYanLun"
                android:layout_below="@id/tv_mineYanLun"
                android:padding="3dp"
                />
            <LinearLayout
                android:id="@+id/linearBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/tv_mineYanLun"
                android:layout_marginTop="25dp"
                >
                <LinearLayout
                    android:id="@+id/linear_college"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/iv_isCollect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/tantao_college1"
                        android:layout_marginRight="3dp"
                        />
                    <TextView
                        android:id="@+id/tv_isCollect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏"
                        android:textColor="@color/gray_dan"
                        android:textSize="@dimen/txt_size_thirteen"
                        android:layout_gravity="bottom"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:id="@+id/linear_yaoQing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/yantao_yaoqing"
                        android:layout_marginRight="3dp"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邀请回答"
                        android:textColor="@color/gray_dan"
                        android:textSize="@dimen/txt_size_thirteen"
                        android:layout_gravity="bottom"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:id="@+id/linear_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="15dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/yantao_share"
                        android:layout_marginRight="3dp"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分享"
                        android:textColor="@color/gray_dan"
                        android:textSize="@dimen/txt_size_thirteen"
                        android:layout_gravity="bottom"
                        />
                </LinearLayout>


            </LinearLayout>
            <TextView
                android:id="@+id/tv_count_guanDian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0个观点"
                android:textSize="@dimen/txt_size_fifteen"
                android:textColor="@color/txt_color_dark"
                android:layout_below="@id/linearBottom"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/subscribe_item_disabled_bg_day"
                android:layout_below="@id/tv_count_guanDian"
                />

        </RelativeLayout>
    </LinearLayout>


</FrameLayout>