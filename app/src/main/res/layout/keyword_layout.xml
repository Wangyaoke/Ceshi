<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/parent"
    tools:context="com.ansiyida.cgjl.activity.LoginActivity">

    <include layout="@layout/second_view_top2" />
      <TextView
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/subscribe_item_disabled_bg_day"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="14dp"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:inputType="textImeMultiLine"
            android:id="@+id/editText_key"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="添加关键词（最多15个字）"
            android:textColor="@color/default_text_night_day"
            android:textColorHint="#d6e2e9"
            android:textSize="16sp"
            android:singleLine="true"
            android:imeOptions="actionDone"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/subscribe_item_disabled_bg_day"

        />
    <com.ansiyida.cgjl.view.MyGridView
        android:id="@+id/gridViewTop_fragment3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="2dp"
        android:numColumns="4" />

</LinearLayout>
