<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".activity.HistoryActivity">
    <include
        layout="@layout/second_view_top"
        />
    <EditText
        android:id="@+id/edit_souce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
    <EditText
        android:id="@+id/edit_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/dropbutton_linelayout"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/area_layout"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp" >
            <TextView
                android:id="@+id/area_textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="全国"
                android:textColor="@color/text_black"
                android:layout_centerInParent="true"
                android:drawablePadding="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="14sp"
                android:drawableRight="@mipmap/ic_dropdown_normal"/>
        </LinearLayout>
        <View
            android:layout_width="2px"
            android:layout_height="40dp"
            android:background="@color/line_color"/>
        <com.ansiyida.cgjl.tab.DropdownButton
            android:id="@+id/time2"
            android:layout_width="0px"
            android:layout_height="50dp"
            android:layout_weight="1"/>
        <View
            android:layout_width="2px"
            android:layout_height="40dp"
            android:background="@color/line_color"/>
        <com.ansiyida.cgjl.tab.DropdownButton
            android:id="@+id/time3"
            android:layout_width="0px"
            android:layout_height="50dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/line_color"/>
<RelativeLayout
    android:id="@+id/relative_fragment_lable"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/dropbutton_linelayout"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:id="@+id/line"
        android:orientation="vertical"
        android:background="#11000000"
        android:visibility="gone"
        >
    </LinearLayout>
    <com.andview.refreshview.XRefreshView
        android:id="@+id/xrefreshView_spinner_zb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_spinner_zb"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.andview.refreshview.XRefreshView>
    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_empty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_txt_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂时没有记录"
        android:textColor="@color/gray_dan"
        android:textSize="@dimen/txt_size_fifteen"
        android:layout_below="@id/iv_empty"
        android:layout_marginTop="47dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/iv_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_repeat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:visibility="gone"
        />
</RelativeLayout>
</LinearLayout>



