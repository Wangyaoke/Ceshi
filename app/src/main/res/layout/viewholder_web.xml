<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.WebActivity"
    android:background="@color/white">

    <WebView
       android:layout_marginHorizontal="16dp"
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="WebViewLayout" />
    
    <RelativeLayout
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/webView"
        android:id="@+id/Advertisement_rel"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/Advertisement_image"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="10dp"/>
        <TextView
            android:id="@+id/Advertisement_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_toRightOf="@id/Advertisement_image"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:textSize="16sp"
            android:textColor="@color/back_dark"
            android:ellipsize="end"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/Advertisement_image"
            android:layout_below="@id/Advertisement_title">
            <RelativeLayout
                android:id="@+id/Advertisment_rel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/Advertisement_press"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:maxLength="10"
                    android:ellipsize="end"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/Advertisement_press"
                    android:id="@+id/Advertisement_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f00"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <Button
                    android:id="@+id/go_buy"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="去购买"
                    android:background="@drawable/shape_red"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_fourteen"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
