<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/F8F8F8"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日发布消息："
            android:textSize="@dimen/txt_size_fourteen"
            android:textColor="@color/txt_color_dark"
            android:layout_marginRight="10dp"
           />
        <TextView

            android:id="@+id/qy_today"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="232132kkkkkkkkkkkkkkkkkkkkkkkkkkkkkk1"
            android:textSize="@dimen/txt_size_fourteen"
            android:textColor="@color/txt_color_dark"
           />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史发布消息："
            android:textSize="@dimen/txt_size_fourteen"
            android:textColor="@color/txt_color_dark"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/tv_qyhistory"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="232132kkkkkkkkkkkkkkkkkkkkkkkkkkkkkk1"
            android:textColor="@color/txt_color_dark"
            android:textSize="@dimen/txt_size_fourteen" />
    </LinearLayout>


</LinearLayout>