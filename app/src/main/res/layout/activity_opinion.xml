<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows = "true"
    android:orientation="vertical"
    tools:context="com.ansiyida.cgjl.activity.OpinionActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:paddingTop="21dp"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/point_back"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />
        <TextView
            android:id="@+id/deleteAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:clickable="true"
            android:paddingTop="10dp"
            android:visibility="gone"
            android:paddingBottom="10dp"
            android:text="全部删除"
            android:textSize="@dimen/txt_size_fourteen"
            android:textColor="@color/black_gray"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="撰写观点"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/txt_size_seventeen"
            android:textColor="@color/txt_color_day"
            android:paddingTop="10dp"
            />
        <TextView
            android:id="@+id/text_putOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="发表"
            android:textSize="@dimen/txt_size_fourteen"
            android:layout_alignParentRight="true"
            android:paddingTop="11dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:textColor="@color/txt_color_day"
            />
        <TextView
            android:id="@+id/edit_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="取消"
            android:textSize="@dimen/txt_size_fourteen"
            android:layout_alignParentRight="true"
            android:paddingTop="11dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:visibility="gone"
            android:textColor="@color/black_gray"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/subscribe_item_disabled_bg_day"
        />
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="top"
        android:textSize="@dimen/txt_size_fifteen"
        android:hint="请输入您的观点..."
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/text_black"
        android:paddingTop="10dp"
        />

</LinearLayout>
