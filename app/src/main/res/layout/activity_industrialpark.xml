<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.cgjl_activity.IndustrialParkDetailActivity"
    android:background="@color/white">
    <WebView
        android:visibility="gone"
        android:scrollbars="none"
        android:layout_marginTop="20dp"
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></WebView>
    <ImageView
        android:id="@+id/top_image"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@mipmap/industri_top_back"/>
    <RelativeLayout
        android:id="@+id/top_rel"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/point_back_white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="页面标题"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textSize="@dimen/txt_size_nineteen"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_marginTop="-70dp"
        android:layout_below="@id/top_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
       <!-- 最大的RelativeLayout-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.stx.xhb.xbanner.XBanner
                android:id="@+id/Xbanner"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:isClipChildrenMode="true"
                android:layout_gravity="center"
                app:clipChildrenLeftRightMargin="60dp"
                app:isShowNumberIndicator="false"
                app:pointsVisibility="false"
                />
           <!-- 子布局-->
            <RelativeLayout
                android:paddingTop="30dp"
                android:background="@color/white"
                android:layout_below="@id/Xbanner"
                android:id="@+id/rent_rel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="15dp">
                <TextView
                    android:id="@+id/rent_rel_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="租金均价："
                    android:textSize="@dimen/txt_size_seventeen"
                    android:textColor="@color/qy_text_night_day"
                    />
                <TextView
                    android:id="@+id/rent_text"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/rent_rel_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/txt_size_seventeen"
                    android:textColor="@color/text_red"
                    android:text="￥0元"/>
                <TextView
                    android:layout_toRightOf="@id/rent_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="/m²/天"
                    android:textSize="@dimen/txt_size_seventeen"
                    android:textColor="@color/qy_text_night_day"/>
            </RelativeLayout>
           <!-- 产业园简介-->
            <RelativeLayout
                android:paddingTop="10dp"
                android:background="@color/white"
                android:layout_below="@id/rent_rel"
                android:id="@+id/ZCYH_REL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/Detail_Recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
            <Button
                android:id="@+id/Application_for_admission_btn"
                android:layout_below="@id/ZCYH_REL"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:text="申请入驻"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_sixteen"
                android:background="@drawable/industrialpark_shape"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="20dp"
                />
            <RelativeLayout
                android:background="@color/white"
                android:paddingHorizontal="15dp"
                android:layout_below="@id/Application_for_admission_btn"
                android:id="@+id/XWDT_REL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/XWDT_title"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="政策新闻"
                    android:textColor="@color/back_dark"
                    android:textSize="@dimen/txt_size_sixteen"/>
                <View
                    android:id="@+id/XWDT_VIEW"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/XWDT_title"
                    android:layout_width="30dp"
                    android:layout_height="1.5dp"
                    android:background="@color/color_blue"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/XWDT_Recycler"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/XWDT_VIEW"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>