<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line_mainActivity"
        />
    <RelativeLayout
        android:id="@+id/relative_search_bg"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="50dp"
        android:visibility="gone"
        >
    </RelativeLayout>
    <TextView
        android:id="@+id/line_mainActivity"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        />
    <RadioGroup
        android:id="@+id/rg_mainAcitivity"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >
        <RadioButton
            android:id="@+id/rb1_mainAcitivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/select_sy"
            android:textColor="@color/select_color_tab"
            android:text="首页"
            android:gravity="center|bottom"
            android:paddingBottom="5dp"
            android:background="#00000000"
            android:textSize="@dimen/txt_size_eleven"
            android:paddingTop="5dp" />
       <!-- <Button
            android:id="@+id/bt1_mainAcitivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/select_sy"
            android:textColor="@color/select_color_tab"
            android:visibility="gone"
            android:text="首页"
            android:gravity="center|bottom"
            android:paddingBottom="5dp"
            android:background="#00000000"
            android:textSize="@dimen/txt_size_eleven"
            android:paddingTop="5dp"
            android:checked="true"
            />-->
        <RadioButton
            android:id="@+id/rb3_mainAcitivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:layout_weight="1"
            android:drawableTop="@drawable/select_tabdy"
            android:textColor="@color/select_color_tab"
            android:gravity="center|bottom"
            android:paddingBottom="5dp"
            android:textSize="@dimen/txt_size_eleven"
            android:background="#00000000"
            android:text="订阅"
            android:paddingTop="5dp"
            />
        <RadioButton
            android:id="@+id/JmRh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:layout_weight="1"
            android:checked="false"
            />
        <RadioButton
            android:id="@+id/rb2_mainAcitivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:layout_weight="1"
            android:drawableTop="@drawable/select_tab2"
            android:textColor="@color/select_color_tab"
            android:gravity="center|bottom"
            android:paddingBottom="5dp"
            android:textSize="@dimen/txt_size_eleven"
            android:background="#00000000"
            android:text="学院"
            android:paddingTop="5dp"
            />
<!--
        <RadioButton
            android:id="@+id/rb4_mainAcitivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:layout_weight="1"
            android:textColor="@color/select_color_tab"
            android:text="兴趣"
            android:textSize="@dimen/txt_size_eleven"
            android:background="#00000000"
            android:gravity="center|bottom"
            android:visibility="gone"
            android:drawableTop="@drawable/select_tab4"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            />-->
        <RadioButton
            android:id="@+id/rb5_mainAcitivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:layout_weight="1"
            android:textColor="@color/select_color_tab"
            android:paddingBottom="5dp"
            android:background="#00000000"
            android:drawableTop="@drawable/select_tab5"
            android:textSize="@dimen/txt_size_eleven"
            android:gravity="center|bottom"
            android:text="我的"
            android:paddingTop="5dp"
            />
        <RadioButton
            android:id="@+id/rbserch_mainAcitivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:layout_weight="1"
            android:textColor="@color/select_color_tab"
            android:paddingBottom="5dp"
            android:background="#00000000"
            android:drawableTop="@drawable/select_tab5"
            android:textSize="@dimen/txt_size_eleven"
            android:gravity="center|bottom"
            android:text="我的"
            android:paddingTop="5dp"
            android:visibility="gone"
            />
    </RadioGroup>
    <FrameLayout
        android:id="@+id/fragLayout_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/isTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试"
        android:textSize="@dimen/txt_size_twenty_two"
        android:textColor="@color/red"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />
    <RelativeLayout
        android:id="@+id/Civil_military_rel"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/jmrh_iconback">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/jmrh_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/jmrhicon"/>
        <TextView
            android:layout_below="@+id/jmrh_image"
            android:id="@+id/Civil_military_name"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:textColor="@color/tab_1_day"
            android:text="军民融合"

            android:textSize="12sp"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/search_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</RelativeLayout>
