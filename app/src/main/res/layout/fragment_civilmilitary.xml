<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/second_view_top" android:id="@+id/top"></include>
    <View
        android:layout_below="@id/top"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#fff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:id="@+id/line"
        android:orientation="vertical"
        android:background="#11000000"
        android:visibility="gone"
        >
    </LinearLayout>
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/top"
        android:id="@+id/choose_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/modetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <EditText
            android:layout_toRightOf="@+id/text"
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <com.ansiyida.cgjl.tab.DropdownButton
            android:id="@+id/address_drop"
            android:layout_width="150dp"
            android:layout_height="35dp" />
        <com.ansiyida.cgjl.tab.DropdownButton
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/address_drop"
            android:id="@+id/Type_drop"
            android:layout_width="150dp"
            android:layout_height="35dp" />
    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_below="@id/choose_rel"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"
        android:layout_marginTop="5dp"/>
    <com.andview.refreshview.XRefreshView
        android:id="@+id/xrefreshView"
       android:layout_below="@id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </com.andview.refreshview.XRefreshView>

    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_empty"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_txt_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂时没有记录"
        android:textColor="@color/gray_dan"
        android:textSize="@dimen/txt_size_fifteen"
        android:layout_below="@id/iv_empty"
        android:layout_marginTop="47dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/iv_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_repeat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:visibility="gone"
        />
</RelativeLayout>