<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/draw_rel"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/fragment3_shaixuan"></include>
    <include layout="@layout/fragment_resouce_include"></include>

    <RelativeLayout
        android:clickable="true"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="#fff"
        android:layout_gravity="right">
        <RelativeLayout
            android:id="@+id/tit_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingVertical="10dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地区"
                android:textSize="@dimen/txt_size_fourteen"
                android:textColor="@color/tab_1_dark"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="筛选"
                android:textSize="@dimen/txt_size_sixteen"
                android:textColor="@color/back_dark"
                android:gravity="center"/>
        </RelativeLayout>
        <ScrollView
            android:layout_below="@id/tit_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/city_show"
                    android:layout_width="match_parent"
                    android:layout_height="320dp">
                    <include layout="@layout/select_city_location_item" android:id="@+id/include"></include>
                    <ListView
                        android:layout_below="@id/include"
                        android:id="@+id/total_city_lv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@null" />
                    <com.ansiyida.cgjl.view.LetterListView
                        android:layout_below="@id/include"
                        android:id="@+id/total_city_letters_lv"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="2dp"
                        />
                    <ListView
                        android:id="@+id/search_city_lv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@null"
                        android:listSelector="@android:color/transparent"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/no_search_result_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="抱歉,暂时没有找到相关城市"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:visibility="gone" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/city_text"
                    android:layout_below="@id/city_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/subscribe_item_drag_bg_day"
                    android:textColor="@color/back_dark"
                    android:paddingLeft="20dp"
                    android:text="当前选中地区:北京市"
                    android:visibility="gone"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/city_text"
                    android:id="@+id/xinxi_lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="信息类型"
                        android:textColor="#ff363636"
                        android:textSize="@dimen/txt_size_fourteen"
                        android:layout_marginRight="15dp"
                        />
                    <com.ansiyida.cgjl.tab.DropdownButton_qy
                        android:background="@drawable/shape_qiyekuang"
                        android:id="@+id/xinxi_Type"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingVertical="4dp"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/xinxi_lin"
                    android:id="@+id/resoure_lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="来源"
                        android:textColor="#ff363636"
                        android:textSize="@dimen/txt_size_fourteen"
                        android:layout_marginRight="15dp"/>
                    <com.ansiyida.cgjl.tab.DropdownButton_qy
                        android:background="@drawable/shape_qiyekuang"
                        android:id="@+id/resoure"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingVertical="4dp"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/time_tit"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/resoure_lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="时间"
                    android:textSize="15sp"
                    android:background="@color/subscribe_item_drag_bg_day"
                    android:paddingLeft="25dp"
                    android:textColor="@color/tab_1_dark"
                    android:paddingVertical="5dp"/>
                <LinearLayout
                    android:id="@+id/time_lin"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/time_tit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/seven_Day"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="最近七天"
                            android:textSize="@dimen/txt_size_fourteen"
                            android:gravity="center"
                            android:textColor="@color/back_dark"
                            />
                        <TextView
                            android:id="@+id/SS_Day"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="最近30天"
                            android:textSize="@dimen/txt_size_fourteen"
                            android:gravity="center"
                            android:textColor="@color/back_dark"/>
                        <TextView
                            android:id="@+id/Half_year"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="最近半年"
                            android:textSize="@dimen/txt_size_fourteen"
                            android:gravity="center"
                            android:textColor="@color/back_dark"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginVertical="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">
                        <Button
                            android:id="@+id/start_time"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="    "
                            android:background="#ECECEC"/>
                        <View
                            android:layout_width="50dp"
                            android:layout_height="0.3dp"
                            android:background="@color/back_dark"
                            android:layout_gravity="center_vertical"></View>
                        <Button
                            android:id="@+id/end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="    "
                            android:background="#ECECEC"/>
                    </LinearLayout>
                    <View
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/default_text_night_day"></View>
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@id/time_lin"
                    android:layout_marginVertical="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <Button
                        android:id="@+id/result"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:text="重置"
                        android:layout_marginRight="10dp"
                        android:textSize="15sp"
                        android:background="@drawable/purchase_result"
                        android:paddingVertical="3dp"/>
                    <Button
                        android:id="@+id/sure"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:text="确定"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/shape_btn_setting_click"
                        android:textSize="@dimen/txt_size_fourteen"
                        android:textColor="#fff"
                        android:paddingVertical="3dp"/>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
    <!--</android.support.v4.widget.DrawerLayout>-->
</android.support.v4.widget.DrawerLayout>