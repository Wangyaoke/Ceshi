<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            >

            <TextView
                android:id="@+id/title_pic_fragment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="国内首次在网上音747：顺丰3.2亿拍走两架"
                android:textColor="?attr/txt_color"
                android:lineSpacingExtra="3dp"
                android:textSize="@dimen/txt_size_seventeen" />
            <LinearLayout
                android:id="@+id/linear_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/title_pic_fragment1"
                android:layout_marginTop="15dp"
                >
                <ImageView
                    android:id="@+id/iv_pic_one"
                    android:layout_width="0dp"
                    android:layout_height="82dp"
                    android:layout_weight="1"
                    android:layout_marginRight="3dp"
                    android:background="@color/subscribe_item_disabled_bg_day"
                    />
                <ImageView
                    android:id="@+id/iv_pic_two"
                    android:layout_width="0dp"
                    android:layout_height="82dp"
                    android:layout_weight="1"
                    android:layout_marginRight="3dp"
                    android:background="@color/subscribe_item_disabled_bg_day"
                    />
                <ImageView
                    android:id="@+id/iv_pic_three"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="82dp"
                    android:background="@color/subscribe_item_disabled_bg_day"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/title_pic_fragment1"
                android:layout_marginTop="15dp"
                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="82dp"
                    android:layout_weight="1"
                    android:layout_marginRight="3dp"
                    android:background="@mipmap/photo_box"

                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="82dp"
                    android:layout_weight="1"
                    android:layout_marginRight="3dp"
                    android:background="@mipmap/photo_box"

                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="82dp"
                    android:background="@mipmap/photo_box"

                    />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_picNum"
                android:layout_width="29dp"
                android:layout_height="12dp"
                android:text="8图"
                android:textSize="@dimen/txt_size_nine"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_alignBottom="@id/linear_pic"
                android:layout_alignRight="@id/linear_pic"
                android:background="@drawable/shape_bg_pic_num"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/visible_sourceNews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_zhiDing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="置顶"
                        android:textColor="#A90915"
                        android:textSize="@dimen/txt_size_ten"
                        android:background="@drawable/shape_zhi_ding"
                        android:padding="2dp"
                        android:layout_marginRight="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="来源："
                        android:textSize="@dimen/txt_size_twelve"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/newsSource_pic_fragment1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未知"
                        android:textSize="@dimen/txt_size_twelve" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/visible_sourceUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="19dp"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/user_touXiang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/man_default_touxiang" />

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="user_2154"
                        android:textSize="@dimen/txt_size_twelve" />
                </LinearLayout>

                <TextView
                    android:id="@+id/newsTime_pic_fragment1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="25分钟前"
                    android:textSize="@dimen/txt_size_twelve" />

                <TextView
                    android:id="@+id/newsTalk_pic_fragment1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="38"
                    android:visibility="gone"
                    android:textSize="@dimen/txt_size_twelve" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论"
                    android:textSize="@dimen/txt_size_twelve"
                    android:visibility="gone"
                    />



            </LinearLayout>

        </RelativeLayout>
        <ImageView
            android:id="@+id/delete_pic_fragment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_cha2"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        android:layout_below="@id/relative"
        android:layout_marginTop="-1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        />

</RelativeLayout>