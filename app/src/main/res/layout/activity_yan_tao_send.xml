<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.ansiyida.cgjl.activity.YanTaoSendActivity">
    <include
        android:id="@+id/include"
        layout="@layout/second_view_top"/>
    <RelativeLayout
        android:id="@+id/relative_one"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_below="@id/include"
        android:background="@drawable/shape_yantao_box"
        android:layout_marginTop="27dp"
        >
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_dan"
            android:text="分类"
            android:textSize="@dimen/txt_size_fifteen"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:id="@+id/iv_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_yantao_down"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textColor="#f00"
        android:textSize="@dimen/txt_size_fifteen"
        android:layout_alignRight="@id/relative_one"
        android:layout_marginRight="-10dp"
        android:layout_alignTop="@id/relative_one"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/editText_title_yanTaoSend"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_below="@id/relative_one"
        android:background="@drawable/shape_yantao_box"
        android:layout_marginTop="26dp"
        android:textColor="@color/text_black"
        android:textSize="@dimen/txt_size_fifteen"
        android:hint="问题标题"
        android:paddingRight="50dp"
        android:singleLine="true"
        android:maxLength="20"
        android:paddingLeft="10dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@id/editText_title_yanTaoSend"
        android:layout_alignRight="@id/editText_title_yanTaoSend"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="8dp"
        >

        <TextView
            android:id="@+id/tv_titleCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/txt_size_fourteen"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/20"
            android:textSize="@dimen/txt_size_fourteen"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textColor="#f00"
        android:textSize="@dimen/txt_size_fifteen"
        android:layout_alignRight="@id/editText_title_yanTaoSend"
        android:layout_marginRight="-10dp"
        android:layout_alignTop="@id/editText_title_yanTaoSend"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/editText_des_yanTaoSend"
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_below="@id/editText_title_yanTaoSend"
        android:background="@drawable/shape_yantao_box"
        android:layout_marginTop="26dp"
        android:textColor="@color/text_black"
        android:textSize="@dimen/txt_size_fifteen"
        android:hint="问题描述"
        android:paddingLeft="10dp"
        android:gravity="left"
        android:paddingTop="10dp"
        android:maxLength="500"
        android:paddingBottom="35dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@id/editText_des_yanTaoSend"
        android:layout_alignRight="@id/editText_des_yanTaoSend"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/tv_editCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/txt_size_fourteen"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/500"
            android:textSize="@dimen/txt_size_fourteen"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加标签(选填,为问题添加标签可以更准确的推送到专业人士来回答)"
        android:textSize="@dimen/txt_size_twelve"
        android:textColor="#514f4f"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_below="@id/editText_des_yanTaoSend"
        android:layout_marginTop="25dp"
        />
    <LinearLayout
        android:id="@+id/linear_tab"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_below="@id/tv_txt"
        android:gravity="center_vertical"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tab1"
            android:layout_width="53dp"
            android:layout_height="21dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape_mine_tab2"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:visibility="gone"
            android:textSize="@dimen/txt_size_twelve" />

        <TextView
            android:id="@+id/tab2"
            android:layout_width="53dp"
            android:layout_height="21dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape_mine_tab2"
            android:gravity="center"
            android:singleLine="true"
            android:visibility="gone"
            android:textColor="@color/text_black"
            android:textSize="@dimen/txt_size_twelve" />

        <TextView
            android:id="@+id/tab3"
            android:layout_width="53dp"
            android:layout_height="21dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape_mine_tab2"
            android:gravity="center"
            android:singleLine="true"
            android:visibility="gone"
            android:textColor="@color/text_black"
            android:textSize="@dimen/txt_size_twelve" />

        <TextView
            android:id="@+id/tab4"
            android:layout_width="53dp"
            android:layout_height="21dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape_mine_tab2"
            android:gravity="center"
            android:visibility="gone"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textSize="@dimen/txt_size_twelve" />

        <TextView
            android:id="@+id/tab5"
            android:layout_width="53dp"
            android:layout_height="21dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/shape_mine_tab2"
            android:gravity="center"
            android:visibility="gone"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textSize="@dimen/txt_size_twelve"
            />

    </LinearLayout>
    <ImageView
        android:id="@+id/text_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_edit2"
        android:layout_alignBottom="@id/linear_tab"
        android:layout_toRightOf="@id/linear_tab"
        android:padding="5dp"
        />
    <Button
        android:id="@+id/btn_send"
        android:layout_width="238dp"
        android:layout_height="38dp"
        android:background="@drawable/shape_btn_setting_click"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="发表"
        android:textSize="@dimen/txt_size_seventeen"
        android:textColor="@color/white"
        />

</RelativeLayout>
