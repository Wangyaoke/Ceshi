<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.ansiyida.cgjl.activity.VideoDetailsActivity">
    <TextView
        android:id="@+id/tv_top"
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:background="#000000"
        />
    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:id="@+id/videoPlayer_detail"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:layout_below="@id/tv_top"
        />
    <com.andview.refreshview.XRefreshView
        android:id="@+id/xrefreshView_videoDetailsActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="47dp"
        android:layout_below="@id/videoPlayer_detail"

        >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleView_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    </com.andview.refreshview.XRefreshView>

    <ImageView
        android:id="@+id/image_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="25dp"
        android:src="@mipmap/point_back_white" />
    <LinearLayout
        android:id="@+id/linear_bottom"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/subscribe_item_disabled_bg_day"
        >
        <ImageView
            android:id="@+id/picture_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingRight="14dp"
            android:src="@mipmap/point_back_gray" />
        <ImageView
            android:id="@+id/iv_editPingLun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/talk_box"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/iv_college"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yantao_college_none"
            android:paddingLeft="12dp"
            android:layout_marginLeft="28dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="1dp"
            android:paddingRight="12dp"
            />
        <ImageView
            android:id="@+id/iv_pingLun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/detail_msg"
            android:paddingLeft="12dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="12dp"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/detail_share"
            android:paddingLeft="12dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingRight="12dp"
            />
    </LinearLayout>


</RelativeLayout>
