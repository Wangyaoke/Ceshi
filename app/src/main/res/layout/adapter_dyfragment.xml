<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="225dp"
    xmlns:custom="http://www.baidu.com/apk/res/custom"
    android:background="@color/line_color"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/mine_dy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:text="招采信息01"
            android:textColor="@color/text_black"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <com.lid.lib.LabelTextView
            android:id="@+id/text_hd"
            android:layout_width="29dp"
            android:layout_height="30dp"
            android:text="@null"
            app:label_backgroundColor="#4e86ed"
            app:label_distance="11dp"
            app:label_orientation="RIGHT_TOP"
            app:label_text="POP"
            app:label_textSize="11sp"
            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关键词:"
            android:textColor="@color/text_tile"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关键词:"
            android:id="@+id/keyword_dy1"
            android:textColor="@color/text_black"
            android:textSize="13sp"
            android:background="@drawable/shape_dy"
            android:layout_marginLeft="11dp"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关键词:"
            android:id="@+id/keyword_dy2"
            android:textColor="@color/text_black"
            android:textSize="13sp"
            android:background="@drawable/shape_dy"
            android:layout_marginLeft="11dp"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关键词:"
            android:id="@+id/keyword_dy3"
            android:textColor="@color/text_black"
            android:textSize="13sp"
            android:background="@drawable/shape_dy"
            android:layout_marginLeft="11dp"
            android:visibility="gone"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地区:"
            android:textColor="@color/text_tile"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关键词:"
            android:id="@+id/sheng"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:layout_marginLeft="11dp"

            />



    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信息类型:"
            android:textColor="@color/text_tile"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信息类型:"
            android:id="@+id/type"
            android:textColor="@color/text_black"
            android:textSize="16sp"

            android:layout_marginLeft="11dp"

            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来源网站:"
            android:textColor="@color/text_tile"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信息类型:"
            android:id="@+id/souce"
            android:textColor="@color/text_black"
            android:textSize="16sp"

            android:layout_marginLeft="11dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018年4月5日 更新 "
        android:textColor="@color/text_tile"
        android:textSize="13sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        />

    </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/line_read"
            android:orientation="horizontal"
            android:layout_width="160dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/line_del"

                android:layout_height="wrap_content" >
                <ImageView
                    android:id="@+id/iv_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_delete3x"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除"
                    android:id="@+id/del"
                    android:textColor="@color/text_blue"
                    android:textSize="13sp"

                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/line_write">
                <ImageView
                    android:id="@+id/iv_write"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_edit"

                    android:background="@drawable/shape_circle"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编辑"
                    android:id="@+id/write"
                    android:textColor="@color/text_blue"
                    android:textSize="13sp"

                    />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>