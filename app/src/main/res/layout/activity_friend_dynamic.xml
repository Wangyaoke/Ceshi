<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.ansiyida.cgjl.activity.FriendDynamicActivity">
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/iv_bg"
           android:layout_width="match_parent"
           android:layout_height="117dp"
           android:background="@mipmap/dynamic_top_bg"
           />
       <ImageView
           android:id="@+id/image_back"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@mipmap/point_back_white2"
           android:paddingLeft="14dp"
           android:paddingTop="32dp"
           android:paddingRight="14dp"
           android:paddingBottom="14dp"
           />
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@mipmap/icon_share_white"
           android:paddingTop="39dp"
           android:paddingRight="14dp"
           android:layout_alignParentRight="true"
           android:visibility="gone"
           android:paddingLeft="20dp"
           android:paddingBottom="20dp"
           />
       <ImageView
           android:id="@+id/iv_touXiang"
           android:layout_width="48dp"
           android:layout_height="48dp"
           android:src="@mipmap/default_touxiang"
           android:layout_alignBottom="@id/iv_bg"
           android:layout_marginBottom="-24dp"
           android:layout_marginLeft="14dp"
           />
       <ImageView
           android:id="@+id/iv_care"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@mipmap/icon_guanzhu_none"
           android:layout_below="@id/iv_bg"
           android:layout_alignParentRight="true"
           android:layout_marginTop="14dp"
           android:layout_marginRight="14dp"
           />
       <TextView
           android:id="@+id/tv_userName"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="XXX"
           android:textSize="@dimen/txt_size_seventeen"
           android:textColor="@color/txt_color_day"
           android:layout_below="@id/iv_care"
           android:layout_marginLeft="14dp"
           android:layout_marginTop="9dp"
           />
       <TextView
           android:id="@+id/tv_talk"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="XXX"
           android:textSize="@dimen/txt_size_fourteen"
           android:textColor="@color/txt_color_day"
           android:layout_below="@id/tv_userName"
           android:layout_marginLeft="14dp"
           android:layout_marginTop="8dp"
           android:ellipsize="end"
           android:maxLines="2"
           android:layout_marginRight="14dp"
           />
       <TextView
           android:id="@+id/txt_guanZhu"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="关注"
           android:textSize="@dimen/txt_size_fourteen"
           android:textColor="@color/txt_color_day"
           android:layout_below="@id/tv_talk"
           android:layout_marginLeft="14dp"
           android:layout_marginTop="22dp"
           android:singleLine="true"
           android:ellipsize="end"
           />
       <TextView
           android:id="@+id/tv_guanZhuCount"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="0"
           android:textSize="@dimen/txt_size_fourteen"
           android:textColor="@color/txt_color_day"
           android:layout_below="@id/tv_talk"
           android:layout_marginLeft="9dp"
           android:layout_marginTop="22dp"
           android:layout_toRightOf="@id/txt_guanZhu"
           />
       <TextView
           android:id="@+id/txt_fans"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="粉丝"
           android:textSize="@dimen/txt_size_fourteen"
           android:textColor="@color/txt_color_day"
           android:layout_below="@id/tv_talk"
           android:layout_marginLeft="28dp"
           android:layout_marginTop="22dp"
           android:layout_toRightOf="@id/tv_guanZhuCount"
           />
       <TextView
           android:id="@+id/tv_fansCount"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="0"
           android:textSize="@dimen/txt_size_fourteen"
           android:textColor="@color/txt_color_day"
           android:layout_below="@id/tv_talk"
           android:layout_marginLeft="9dp"
           android:layout_marginTop="22dp"
           android:layout_toRightOf="@id/txt_fans"
           />

   </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/subscribe_item_disabled_bg_day"
            />
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            >
            <RadioButton
                android:id="@+id/rb1_friendDynamicActivity"
                android:layout_width="58dp"
                android:layout_height="40dp"
                android:text="@string/mine_dongtai"
                android:button="@null"
                android:gravity="center"
                android:layout_marginLeft="70dp"
                android:textSize="@dimen/txt_size_fifteen"

                android:textColor="@drawable/select_color_fans"
                android:background="@drawable/select_rb_fans"
                />
            <RadioButton
                android:id="@+id/rb2_friendDynamicActivity"
                android:layout_width="58dp"
                android:layout_height="40dp"
                android:text="@string/mine_yantao"
                android:button="@null"
                android:gravity="center"
                android:layout_marginLeft="103dp"
                android:textColor="@drawable/select_color_fans"
                android:background="@drawable/select_rb_fans"
                />

        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:background="@color/subscribe_item_disabled_bg_day"
            />
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager_friendDynamicActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>


</LinearLayout>
