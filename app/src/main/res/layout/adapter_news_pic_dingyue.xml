<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/linear_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:layout_marginTop="14dp"
            >

            <LinearLayout
                android:id="@+id/visible_sourceNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"

                >
                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/default_touxiang"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/shape_circle"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="来源："
                    android:textSize="@dimen/txt_size_twelve"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未知"
                    android:maxLength="10"
                    android:textSize="@dimen/txt_size_twelve" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/visible_sourceUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="19dp"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/user_touXiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/man_default_touxiang" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="user_2154"
                    android:textSize="@dimen/txt_size_twelve" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="XX"
                android:textSize="@dimen/txt_size_twelve" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingTop="13dp"
            android:layout_below="@id/linear_top"
            >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingBottom="4dp"
                android:layout_weight="2"
                android:paddingLeft="15dp"
                android:layout_marginRight="15dp"
                >

                <TextView
                    android:id="@+id/tv_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:lineSpacingExtra="3dp"
                    android:text="国内首次在网上司法拍卖波音747：顺丰3.2亿拍走两架"
                    android:textColor="?attr/txt_color"
                    android:textSize="@dimen/txt_size_seventeen" />
                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_list_zan"
                        />
                    <TextView
                        android:id="@+id/tv_zanCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x"
                        android:textColor="@color/gray_dan"
                        android:textSize="@dimen/txt_size_twelve"
                        android:layout_marginLeft="4dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@id/linear1"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_list_college"
                        />
                    <TextView
                        android:id="@+id/tv_collegeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x"
                        android:textColor="@color/gray_dan"
                        android:textSize="@dimen/txt_size_twelve"
                        android:layout_marginLeft="4dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/linear2"
                    android:visibility="gone"
                    android:layout_marginLeft="15dp" >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_list_share"
                        />
                    <TextView
                        android:id="@+id/tv_shareCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x"
                        android:textColor="@color/gray_dan"
                        android:textSize="@dimen/txt_size_twelve"
                        android:layout_marginLeft="4dp"
                        />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="109dp"
                android:layout_height="73dp"
                android:layout_marginRight="14dp"
                >
                <ImageView
                    android:id="@+id/iv_pic"
                    android:layout_width="match_parent"
                    android:layout_height="73dp"
                    android:background="@color/subscribe_item_disabled_bg_day" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="73dp"
                    android:background="@mipmap/photo_box" />
                <TextView
                    android:id="@+id/tv_vTime"
                    android:layout_width="29dp"
                    android:layout_height="12dp"
                    android:text="03:11"
                    android:textSize="@dimen/txt_size_nine"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_bg_pic_num"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"
                    />
                <ImageView
                    android:id="@+id/iv_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_play"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    />
            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relative"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="-1dp"
        android:background="@color/line_color" />
</RelativeLayout>