<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="9dp"
        android:layout_height="104dp">

        <RelativeLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >
            <TextView
            android:id="@+id/tv_body_system"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统提示"
            android:textSize="@dimen/txt_size_fourteen"
            android:textColor="@color/txt_color_dark"
            />

            <TextView
                android:id="@+id/tv_message_system"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_fourteen"
                android:textColor="@color/txt_color_dark"
                android:layout_marginTop="9dp"
                android:layout_below="@id/tv_body_system"
                android:text="风凌天针对您的提问发表了观点【软件开发的持续优化过程是一步一步的，急于求成反而事…"
                android:maxLines="2"
                android:ellipsize="end"
                />

        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/icon_delete"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/tv_time_system"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-12-27"
            android:textSize="@dimen/txt_size_twelve"
            android:textColor="@color/black_gray"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="15dp"
            />


    </RelativeLayout>
</RelativeLayout>