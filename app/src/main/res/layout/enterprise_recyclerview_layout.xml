<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/Title_lin"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left">
            <View
                android:id="@+id/ColorView"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@color/yellow"
                android:layout_centerVertical="true"
                android:visibility="invisible"/>
            <TextView
                android:layout_toRightOf="@id/ColorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="行业"
                android:textSize="@dimen/txt_size_fourteen"
                android:textColor="#333333"
                android:gravity="center" />
        </RelativeLayout>
       
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="比重"
            android:textSize="@dimen/txt_size_fourteen"
            android:textColor="#333333"
            android:gravity="center"/>
        <TextView
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="数量"
            android:textSize="@dimen/txt_size_fourteen"
            android:textColor="#333333"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/Title_lin"
        android:id="@+id/Data_lin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
       >
        <RelativeLayout
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left">
            <View
                android:id="@+id/DataColorView"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@color/yellow"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/industry_text"
                android:layout_toRightOf="@id/DataColorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="行业"
                android:textSize="@dimen/txt_size_thirteen"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_marginLeft="3dp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/proportion_text"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="比重"
            android:textSize="@dimen/txt_size_thirteen"
            android:textColor="#666666"
            android:gravity="center"/>
        <TextView
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:id="@+id/num_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="数量"
            android:textSize="@dimen/txt_size_thirteen"
            android:textColor="#666666"
            android:gravity="right"/>
    </LinearLayout>
    <View
        android:id="@+id/viewLine"
        android:layout_below="@id/Data_lin"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CCCCCC"
        android:layout_marginBottom="5dp"/>
</RelativeLayout>