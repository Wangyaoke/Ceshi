<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/subscribe_item_disabled_bg_day"
    tools:context=".activity.HistoryActivity">
    <include
        layout="@layout/second_view_top2"
        />

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@color/white"
        >

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >
            <RadioButton
                android:id="@+id/rb1_careFansActivity"
                android:layout_width="89dp"
                android:layout_height="40dp"
                android:text="@string/mine_tuisong"
                android:button="@null"
                android:gravity="center"
                android:textSize="@dimen/txt_size_fifteen"
                android:textColor="@drawable/select_color_fans"
                android:background="@drawable/select_rb_fans"
                />
            <RadioButton
                android:id="@+id/rb2_careFansActivity"
                android:layout_width="89dp"
                android:layout_height="40dp"
                android:text="@string/mine_read"
                android:button="@null"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:textColor="@drawable/select_color_fans"
                android:background="@drawable/select_rb_fans"
                />

        </RadioGroup>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_careFansActivity"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent"/>
</LinearLayout>
