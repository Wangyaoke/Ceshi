                    android:layout_weight="1"
                    android:drawablePadding="8dp"
                    android:drawableTop="@mipmap/icon5"
                    android:textColor="@color/select_color_tab"
                    android:gravity="center|bottom"
                    android:paddingBottom="5dp"
                    android:textSize="@dimen/txt_size_eleven"
