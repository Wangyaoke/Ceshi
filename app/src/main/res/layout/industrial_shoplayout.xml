<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/lrb_shadow"
        android:id="@+id/recycler_shop_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginHorizontal="1dp"
            android:id="@+id/recycler_shop_img"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@mipmap/icon_placeholder"/>

        <TextView
            android:layout_alignBottom="@id/recycler_shop_img"
            android:layout_marginHorizontal="1dp"
            android:paddingVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="@color/white"
            android:background="#FF000000"
            android:alpha="0.4"
            android:maxLines="2"
            android:ellipsize="end"

            android:textStyle="bold"
           />
        <TextView
            android:paddingLeft="20dp"
            android:layout_alignBottom="@id/recycler_shop_img"
            android:id="@+id/recycler_shop_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="商品名字"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_fourteen"
            android:gravity="center_vertical" />
        <android.support.v7.widget.RecyclerView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/recycler_shop_name"
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/recycler_shop_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_twelve"
                android:textColor="#FF999999"
                android:text="北京"/>
            <TextView
                android:id="@+id/ApplyNum"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/recycler_shop_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_twelve"
                android:textColor="#FF999999"
                android:text="四十人申请"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>