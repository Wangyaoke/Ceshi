<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/parent"
    tools:context="com.ansiyida.cgjl.activity.LoginActivity">
    <include layout="@layout/second_view_top2" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="#F8F9FB" />
    <ScrollView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@mipmap/qymlback">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:text="企业名录"
                    android:textSize="25sp" />
                <TextView
                    android:id="@+id/image_qyml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:text="点击查看"
                    android:textSize="14sp"
                    android:background="@drawable/shape_qybt"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:paddingRight="21dp"
                    android:paddingLeft="21dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@mipmap/yzfxback">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:text="业主分析"
                    android:textSize="25sp" />
                <TextView
                    android:id="@+id/image_yzml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:text="点击查看"
                    android:textSize="14sp"
                    android:background="@drawable/shape_qybt"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:paddingRight="21dp"
                    android:paddingLeft="21dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@mipmap/enterpriseback">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:text="企业自荐"
                    android:textSize="25sp" />
                <TextView
                    android:id="@+id/image_qyzj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:text="点击查看"
                    android:textSize="14sp"
                    android:background="@drawable/shape_qybt"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:paddingRight="21dp"
                    android:paddingLeft="21dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>