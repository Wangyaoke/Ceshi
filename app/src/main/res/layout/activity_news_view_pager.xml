<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

        <com.ansiyida.cgjl.view.photoview.HackyViewPager
            android:id="@+id/photo_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:persistentDrawingCache="animation" />
    <TextView
        android:id="@+id/all_click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <RelativeLayout
        android:id="@+id/relative_user"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_marginTop="33dp"

        >
        <com.ansiyida.cgjl.view.RoundImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:src="@mipmap/mine_touxiang"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/user_touXiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来源："
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_eleven"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_soure"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="视觉世界"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/user_touXiang"
            android:layout_marginLeft="9dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/txt_size_eleven"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_guanzhu_none_white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_tab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/msg"
        android:layout_marginTop="-45dp"
        android:gravity="center_vertical"
        android:background="#50000000"
        >

            <TextView
                android:id="@+id/tab1"
                android:layout_width="53dp"
                android:layout_height="21dp"
                android:text="军事"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_twelve"
                android:background="@drawable/shape_mine_tab"
                android:gravity="center"
                android:layout_marginRight="9dp"
                android:singleLine="true"
                android:visibility="gone"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/tab2"
                android:layout_width="53dp"
                android:layout_height="21dp"
                android:text="法律"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_twelve"
                android:background="@drawable/shape_mine_tab"
                android:gravity="center"
                android:singleLine="true"
                android:visibility="gone"
                android:layout_marginRight="9dp"
                />
            <TextView
                android:id="@+id/tab3"
                android:layout_width="53dp"
                android:layout_height="21dp"
                android:text="综合实力"
                android:textColor="@color/white"
                android:singleLine="true"
                android:textSize="@dimen/txt_size_twelve"
                android:background="@drawable/shape_mine_tab"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginRight="9dp"
                />
            <TextView
                android:id="@+id/tab4"
                android:layout_width="53dp"
                android:layout_height="21dp"
                android:text="生物"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textSize="@dimen/txt_size_twelve"
                android:singleLine="true"
                android:background="@drawable/shape_mine_tab"
                android:gravity="center"
                android:layout_marginRight="9dp"
                />
            <TextView
                android:id="@+id/tab5"
                android:layout_width="53dp"
                android:layout_height="21dp"
                android:text="环境"
                android:textColor="@color/white"
                android:visibility="gone"
                android:singleLine="true"
                android:textSize="@dimen/txt_size_twelve"
                android:background="@drawable/shape_mine_tab"
                android:gravity="center"
                />
        <ImageView
            android:id="@+id/text_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_edit"
            android:paddingRight="14dp"
            android:paddingLeft="9dp"
            android:visibility="gone"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"

            />
    </LinearLayout>
     <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#50000000"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="47dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_fourteen" />

    <LinearLayout
        android:id="@+id/linear_bottom"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#000000">
        <ImageView
            android:id="@+id/picture_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingRight="14dp"
            android:src="@mipmap/point_back_white2" />
        <ImageView
            android:id="@+id/iv_editPingLun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/talk_box"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/iv_college"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/photo_college"
            android:paddingLeft="12dp"
            android:layout_marginLeft="28dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingRight="12dp"
            />
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/iv_pingLun"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/photo_msg"
               android:paddingLeft="12dp"
               android:paddingTop="16dp"
               android:paddingBottom="16dp"
               android:paddingRight="12dp"
               />
           <TextView
               android:id="@+id/tv_talkCount"
               android:layout_width="22dp"
               android:layout_height="12dp"
               android:textSize="@dimen/txt_size_nine"
               android:textColor="@color/white"
               android:text="0"
               android:gravity="center"
               android:background="@drawable/shape_talk_bg"
                android:layout_marginTop="8dp"
               android:layout_marginLeft="20dp"
               android:visibility="gone"
               />
       </RelativeLayout>
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/photo_share"
            android:paddingLeft="12dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingRight="12dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_fourteen"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:visibility="gone"
        android:clickable="true"

        />

</RelativeLayout>
