<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.ansiyida.cgjl.activity.RegisterActivity">
    <include
        layout="@layout/second_view_top7"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="47dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >
        <EditText
            android:textCursorDrawable="@drawable/shape_edittext"
            android:id="@+id/editText_phone"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@null"
            android:inputType="number"
            android:hint="@string/str_editPhone"
            android:textSize="16sp"

            android:textColor="@color/text_black"
            android:textColorHint="#d6e2e9"
            />
        <ImageView
            android:id="@+id/image_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_edit_cancle_white"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="12dp"
            android:layout_centerVertical="true"
            android:paddingBottom="12dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/subscribe_item_disabled_bg_day"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >
        <EditText
            android:textCursorDrawable="@drawable/shape_edittext"
            android:id="@+id/editText_password"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="@string/str_editPassword2"
            android:textSize="16sp"
            android:textColor="@color/text_black"
            android:textColorHint="#d6e2e9"
            />
        <ImageView
            android:id="@+id/image_clear3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_edit_cancle_white"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="12dp"
            android:layout_centerVertical="true"
            android:paddingBottom="12dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/subscribe_item_disabled_bg_day"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

        <EditText
            android:id="@+id/editText_passwordAgain"
            android:layout_width="match_parent"
            android:layout_height="58dp"

            android:layout_alignParentTop="true"

            android:layout_marginTop="0dp"
            android:background="@null"
            android:hint="@string/str_editPasswordAgain2"
            android:inputType="textPassword"

            android:textColor="@color/text_black"
            android:textColorHint="#d6e2e9"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/image_clear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_edit_cancle_white"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="12dp"
            android:layout_centerVertical="true"
            android:paddingBottom="12dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/subscribe_item_disabled_bg_day"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >
        <EditText
            android:textCursorDrawable="@drawable/shape_edittext"
            android:id="@+id/editText_yanZheng_tuxing"
            android:layout_width="246dp"
            android:layout_height="58dp"
            android:background="@null"
            android:inputType="textCapCharacters"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="请输入验证码"
            android:textSize="16sp"

            android:textColor="@color/text_black"
            android:textColorHint="#d6e2e9"   />
        <ImageView
            android:id="@+id/obtain_yanZheng_tuxing"
            android:layout_width="80dp"
            android:layout_height="31dp"
            android:src="@mipmap/huoquyz"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:clickable="true"

            android:textSize="@dimen/txt_size_fourteen"
            android:textColor="@color/white"


            />
    </RelativeLayout>
    <TextView
        android:layout_width="246dp"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/subscribe_item_disabled_bg_day"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >
        <EditText
            android:textCursorDrawable="@drawable/shape_edittext"
            android:id="@+id/editText_yanZheng"
            android:layout_width="246dp"
            android:layout_height="58dp"
            android:background="@null"
            android:inputType="number"
            android:hint="@string/str_editYanZheng"
            android:textSize="16sp"

            android:textColor="@color/default_text_night_day"
            android:textColorHint="#d6e2e9"   />

        <TextView
            android:id="@+id/obtain_yanZheng"
            android:layout_width="102dp"
            android:layout_height="29dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:maxLines="1"
            android:clickable="true"
            android:gravity="center"
            android:text="发送短信验证码"
            android:textColor="@color/default_text_night_day"
            android:textSize="@dimen/txt_size_fourteen"


            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/subscribe_item_disabled_bg_day"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录既代表同意"
            android:textColor="@color/black_gray"
            android:textSize="@dimen/txt_size_twelve"

            android:layout_gravity="left"


            android:clickable="true"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_xieyi"
            android:text="《采购精灵服务协议》"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/txt_size_twelve"

            android:layout_gravity="left"


            android:clickable="true"
            />
    </LinearLayout>
    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:background="@drawable/shape_btn_blue"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/btn_finish"

        android:layout_marginTop="46dp"

      />
</LinearLayout>
