<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.cgjl_activity.KnowledgeSearchActivity"
    android:paddingTop="15dp"
    android:background="@mipmap/circle_white"
>
    <include layout="@layout/dy_top"
        android:id="@+id/top_include"/>
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@mipmap/back"
        android:layout_alignParentLeft="true"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        />
    <TextView
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:id="@+id/qxSearch"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="取消"
        android:layout_marginHorizontal="2dp"
        android:gravity="center"
        android:textSize="14sp"/>
    <RelativeLayout
        android:layout_below="@+id/top_include"
        android:layout_toRightOf="@id/back"
        android:layout_toLeftOf="@id/qxSearch"

        android:layout_marginRight="17dp"
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/shape_seach_law"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/edittext_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textCursorDrawable="@drawable/shape_edittext"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/shape_search_bg"
            android:hint="请输入想要搜索的法规名称或内容"
            android:imeOptions="actionSearch"
            android:paddingLeft="35dp"
            android:paddingRight="45dp"
            android:singleLine="true"
            android:textColor="@color/txt_color_day"
            android:textColorHint="@color/black_gray"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:src="@mipmap/icon_search" />
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_alignRight="@id/edittext_search"
            android:src="@mipmap/frag1_icon_delete" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/searchTake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="17dp"
        android:layout_below="@id/relative"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/sousuo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="搜索记录"
            android:textSize="@dimen/txt_size_sixteen"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:textColor="#FF999999"/>
        <ImageView
            android:id="@+id/SearchTake_Del"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@mipmap/search_delete"
            android:layout_toLeftOf="@+id/sousuo"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>
        <com.ansiyida.cgjl.view.cgjl_view.MyFloatLayout
            android:layout_marginTop="30dp"
            android:id="@+id/MyFloatLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp">
        </com.ansiyida.cgjl.view.cgjl_view.MyFloatLayout>
    </RelativeLayout>
<com.andview.refreshview.XRefreshView
    android:layout_marginTop="10dp"
    android:layout_below="@id/relative"
    android:id="@+id/xrefreshView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">
   <android.support.v7.widget.RecyclerView
        android:paddingHorizontal="10dp"
        android:id="@+id/search_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
    </android.support.v7.widget.RecyclerView>
</com.andview.refreshview.XRefreshView>



    <RelativeLayout
        android:id="@+id/noText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"

        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:id="@+id/noText_image"
            android:layout_width="161dp"
            android:layout_height="110dp"
            android:src="@mipmap/icon_empty"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_marginTop="62dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/noText_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有查询到您需要的内容"
            android:textSize="@dimen/txt_size_fourteen"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/no_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:id="@+id/nosearch_image"
            android:layout_width="161dp"
            android:layout_height="110dp"
            android:src="@mipmap/know_nosearch"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/nosearch_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂时还没有搜索记录"
            android:textSize="@dimen/txt_size_fourteen"/>
    </RelativeLayout>
</RelativeLayout>