<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
        <RelativeLayout
            android:id="@+id/company_name_REL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:background="@color/white">
            <RelativeLayout
                android:id="@+id/company_name_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/company_name_xing"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="*"
                    android:textColor="#ffff0e0e"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:textSize="14sp"
                    android:layout_toRightOf="@id/company_name_xing"
                    android:id="@+id/company_name_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="公司(单位)名称"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:singleLine="true"/>
            </RelativeLayout>
            <TextView

                android:layout_below="@id/company_name_rel"
                android:id="@+id/company_name_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:textSize="10sp"
                android:text="50"/>
            <View
                android:layout_below="@id/company_name_num"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@id/company_name_REL"
            android:id="@+id/company_website_REL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:background="@color/white">
            <RelativeLayout
                android:id="@+id/company_website_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/company_website_xing"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="*"
                    android:textColor="#ffff0e0e"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:textSize="14sp"
                    android:layout_toRightOf="@id/company_website_xing"
                    android:id="@+id/company_website_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="公司(单位)网址"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:singleLine="true"/>
            </RelativeLayout>
            <TextView
                android:layout_below="@id/company_website_rel"
                android:id="@+id/company_website_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:textSize="10sp"
                android:text="50"/>
            <View
                android:layout_below="@id/company_website_num"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/company_website_REL"
            android:id="@+id/company_legalperson_REL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:background="@color/white">
            <RelativeLayout
                android:id="@+id/company_legalperson_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/company_legalperson_xing"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="*"
                    android:textColor="#ffff0e0e"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"/>
                <EditText
                    android:textSize="14sp"
                    android:layout_toRightOf="@id/company_legalperson_xing"
                    android:id="@+id/company_legalperson_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="公司(单位)法人"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:singleLine="true"/>
            </RelativeLayout>
            <TextView
                android:layout_below="@id/company_legalperson_rel"
                android:id="@+id/company_legalperson_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:textSize="10sp"
                android:text="50"/>
            <View
                android:layout_below="@id/company_legalperson_num"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/company_legalperson_REL"
            android:id="@+id/company_RegistrationAddress_REL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:background="@color/white">
            <RelativeLayout
                android:id="@+id/company_RegistrationAddress_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/company_RegistrationAddress_xing"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="*"
                    android:textColor="#ffff0e0e"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"/>
                <EditText
                    android:textSize="14sp"
                    android:layout_toRightOf="@id/company_RegistrationAddress_xing"
                    android:id="@+id/company_RegistrationAddress_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="注册地址"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:singleLine="true"/>
            </RelativeLayout>
            <TextView
                android:layout_below="@id/company_RegistrationAddress_rel"
                android:id="@+id/company_RegistrationAddress_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:textSize="10sp"
                android:text="50"/>
            <View
                android:id="@+id/RegisterAddress_view"
                android:layout_below="@id/company_RegistrationAddress_num"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/RegisterAddress_Rel"
            android:paddingVertical="10dp"
            android:layout_below="@id/company_RegistrationAddress_REL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:id="@+id/register_xing"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="*"
                android:textColor="#ffff0e0e"
                android:layout_centerVertical="true"
                android:visibility="invisible"/>
            <TextView
                android:layout_toRightOf="@id/register_xing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#cccccc"
                android:textSize="12sp"
                android:hint="与营业执照地址一致" />
        </RelativeLayout>
        <View
            android:id="@+id/F8F9FB_View"
            android:layout_below="@id/RegisterAddress_Rel"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#F8F9FB"/>
        <RelativeLayout
            android:layout_below="@id/F8F9FB_View"
            android:id="@+id/company_IndustryCategory_REL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingTop="15dp">
            <TextView
                android:id="@+id/IndustryCategory_xing"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="*"
                android:textColor="#ffff0e0e"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/IndustryCategory_text"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/IndustryCategory_xing"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/back_dark"
                android:text="行业类别："/>

            <RadioButton
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/IndustryCategory_text"
                android:id="@+id/company_IndustryCategory_choose"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:checked="false"
                android:drawableRight="@mipmap/introdusi_up"
                android:gravity="center"
                android:paddingRight="20dp"
                android:button="@null"
                android:background="@drawable/listpopwindow"
                />
            <View
                android:layout_marginTop="20dp"
                android:layout_below="@id/company_IndustryCategory_choose"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"/>
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_below="@id/company_IndustryCategory_REL"
            android:id="@+id/company_Mainbusiness_REL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:background="@color/white">
            <RelativeLayout
                android:id="@+id/company_Mainbusiness_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/company_Mainbusiness_xing"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="*"
                    android:textColor="#ffff0e0e"
                    android:layout_centerVertical="true"
                    />
                <EditText
                    android:layout_toRightOf="@id/company_Mainbusiness_xing"
                    android:id="@+id/company_Mainbusiness_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="主营业务关键字"
                    android:textSize="14sp"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:singleLine="true"/>
            </RelativeLayout>
            <TextView
                android:layout_below="@id/company_Mainbusiness_rel"
                android:id="@+id/company_Mainbusiness_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:textSize="10sp"
                android:text="50"/>
            <View
                android:layout_below="@id/company_Mainbusiness_num"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mainbusiness_Rel"
            android:paddingVertical="10dp"
            android:layout_below="@id/company_Mainbusiness_REL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:id="@+id/mainbusiness_xing"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="*"
                android:textColor="#ffff0e0e"
                android:layout_centerVertical="true"
                android:visibility="invisible"/>
            <TextView
                android:layout_toRightOf="@id/mainbusiness_xing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#cccccc"
                android:textSize="12sp"
                android:text="例如:“液压泵/阀/液压系统，等。若涉及多领域请用‘/’分隔”"/>
        </RelativeLayout>
        <View
            android:id="@+id/F8F9FB_View2"
            android:layout_below="@id/mainbusiness_Rel"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#F8F9FB"/>


        <RelativeLayout
            android:layout_below="@id/F8F9FB_View2"
            android:id="@+id/company_IntroductionEnterprises_REL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <RelativeLayout
                android:id="@+id/company_IntroductionEnterprises_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp">
                <TextView
                    android:id="@+id/company_IntroductionEnterprises_xing"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="*"
                    android:textColor="#ffff0e0e"
                    />
                <EditText
                    android:layout_toRightOf="@id/company_IntroductionEnterprises_xing"
                    android:id="@+id/company_IntroductionEnterprises_edit"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center_vertical"
                    android:hint="企业简介"
                    android:textColor="#ff363636"
                    android:textSize="14sp"
                    android:transcriptMode="normal"
                    android:background="@null"
                    android:maxLength="500"
                    android:scrollbars="vertical"
                    android:gravity="top"
                    />
            </RelativeLayout>
            <TextView
                android:layout_below="@id/company_IntroductionEnterprises_rel"
                android:id="@+id/company_IntroductionEnterprises_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:textSize="10sp"
                android:text="500"/>
            <View
                android:layout_below="@id/company_IntroductionEnterprises_num"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/company_IntroductionEnterprises_REL"
            android:id="@+id/company_MainBusinessIntroduction_REL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <RelativeLayout
                android:id="@+id/company_MainBusinessIntroduction_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp">
                <TextView
                    android:id="@+id/company_MainBusinessIntroduction_xing"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="*"
                    android:textColor="#ffff0e0e"

                    />
                <EditText
                    android:layout_toRightOf="@id/company_MainBusinessIntroduction_xing"
                    android:id="@+id/company_MainBusinessIntroduction_edit"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center_vertical"
                    android:hint="主营业务简介"
                    android:textColor="#ff363636"
                    android:textSize="14sp"
                    android:transcriptMode="normal"
                    android:background="@null"
                    android:maxLength="500"
                    android:scrollbars="vertical"
                    android:gravity="top"/>
            </RelativeLayout>
            <TextView
                android:layout_below="@id/company_MainBusinessIntroduction_rel"
                android:id="@+id/company_MainBusinessIntroduction_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:textSize="10sp"
                android:text="500"/>
            <View
                android:layout_below="@id/company_MainBusinessIntroduction_num"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/company_MainBusinessIntroduction_REL"
            android:id="@+id/company_Levelofmilitaryparticipation_REL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingVertical="10dp"
            >
            <TextView
                android:id="@+id/Levelofmilitaryparticipation_xing"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="*"
                android:textColor="#ffff0e0e"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/Levelofmilitaryparticipation_text"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/Levelofmilitaryparticipation_xing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/back_dark"
                android:text="民参军程度："/>
            <RadioButton
                android:layout_toRightOf="@id/Levelofmilitaryparticipation_text"
                android:id="@+id/company_Levelofmilitaryparticipation_choose"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:checked="false"
                android:text="64646464646464646"
                android:drawableRight="@mipmap/introdusi_up"
                android:gravity="center"
                android:paddingRight="20dp"
                android:button="@null"
                android:background="@drawable/listpopwindow"
                />
        </RelativeLayout>
        <Button
            android:id="@+id/next_Page"
            android:layout_below="@id/company_Levelofmilitaryparticipation_REL"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="下一页"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_fourteen"
            android:background="@drawable/industrialpark_shape"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="20dp" />
</RelativeLayout>