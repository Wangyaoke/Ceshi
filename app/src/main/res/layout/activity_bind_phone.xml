<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.ansiyida.cgjl.activity.BindPhoneActivity"
    android:paddingTop="5dp">
    <include
        layout="@layout/second_view_top"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >
        <EditText
            android:textCursorDrawable="@drawable/shape_edittext"
            android:id="@+id/editText_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="number"
            android:hint="@string/str_editPhone"
            android:textSize="16sp"
            android:layout_toLeftOf="@+id/image_clear"
            android:textColorHint="#999999"
            />
        <ImageView
            android:id="@+id/image_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_edit_cancle"
            android:layout_alignParentRight="true"
            android:paddingLeft="25dp"

            />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/subscribe_item_disabled_bg_day"
        android:layout_marginTop="15dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        >
        <EditText
            android:textCursorDrawable="@drawable/shape_edittext"
            android:id="@+id/editText_yanZheng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="number"
            android:hint="请输入短信验证码"
            android:textSize="16sp"
            android:layout_toLeftOf="@+id/obtain_yanZheng"
            android:textColorHint="#999999"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/obtain_yanZheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送短信验证码"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:textSize="@dimen/txt_size_fourteen"
            android:background="@drawable/yzmshape"
            android:textColor="#6093F1"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/subscribe_item_disabled_bg_day"
        android:layout_marginTop="15dp"
        />
    <RelativeLayout
        android:id="@+id/password_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        >
        <EditText
            android:textCursorDrawable="@drawable/shape_edittext"
            android:id="@+id/editText_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="请输入密码"
            android:textSize="16sp"
            android:layout_toLeftOf="@+id/image_pass"
            android:textColorHint="#999999"
            />
        <ImageView
            android:id="@+id/image_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_edit_cancle"
            android:layout_alignParentRight="true"

            />
    </RelativeLayout>
    <TextView
        android:id="@+id/text_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/subscribe_item_disabled_bg_day"
        android:layout_marginTop="15dp"
        />
    <Button
        android:layout_marginHorizontal="35dp"
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/shape_btn_setting_click"
        android:layout_marginTop="46dp"
        android:layout_gravity="center_horizontal"
        android:text="立即绑定"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_seventeen"
        />

</LinearLayout>
