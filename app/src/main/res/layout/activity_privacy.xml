<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/subscribe_item_disabled_bg_day"
    tools:context="com.ansiyida.cgjl.activity.PrivacyActivity">
    <include
        android:id="@+id/include"
        layout="@layout/second_view_top"/>
    <RelativeLayout
        android:id="@+id/relative_phoneNum"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/include"
        android:layout_marginTop="9dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_phone"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textColor="@color/txt_color_day"
            />
        <TextView
            android:id="@+id/bindNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_bindPhone"
            android:layout_centerVertical="true"
            android:layout_marginRight="36dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/txt_color_day"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/point_entry"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_changePassword"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/relative_phoneNum"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textColor="@color/txt_color_day"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/point_entry"
            />
    </RelativeLayout>

</RelativeLayout>
