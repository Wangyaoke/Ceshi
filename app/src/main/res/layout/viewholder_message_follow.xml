<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="9dp"
        android:background="@color/white">

        <com.ansiyida.cgjl.view.RoundImageView
            android:id="@+id/iv_touXiang_follow"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@mipmap/man_default_touxiang" />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_touXiang_follow"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_userName_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="海盗旗"
                android:textColor="@color/tab_2_day"
                android:textSize="@dimen/txt_size_fourteen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注了你"
                android:textSize="@dimen/txt_size_fourteen" />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_time_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-12-27"
            android:textSize="@dimen/txt_size_twelve"
            android:textColor="@color/black_gray"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            />

    </RelativeLayout>
</RelativeLayout>