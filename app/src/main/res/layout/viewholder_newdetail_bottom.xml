<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_readCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="阅读:0"
        android:textColor="@color/gray_dan"
        android:textSize="@dimen/txt_size_thirteen" />

    <TextView
        android:id="@+id/tv_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:padding="15dp"
        android:text=" 举报"
        android:textColor="@color/gray_dan"
        android:drawableLeft="@mipmap/guandian_report"
        android:textSize="@dimen/txt_size_thirteen" />

    <LinearLayout
        android:id="@+id/linear_tab"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_alignTop="@+id/msg"
        android:layout_below="@id/tv_readCount"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/tab1"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/shape_mine_tab2"
            android:gravity="center"
            android:text="法律"
            android:singleLine="true"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:visibility="gone"
            android:textColor="@color/text_black"
            android:textSize="@dimen/txt_size_twelve" />

        <TextView
            android:id="@+id/tab2"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/shape_mine_tab2"
            android:gravity="center"
            android:singleLine="true"
            android:text="法律"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textColor="@color/text_black"
            android:visibility="gone"
            android:textSize="@dimen/txt_size_twelve" />

        <TextView
            android:id="@+id/tab3"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/shape_mine_tab2"
            android:gravity="center"
            android:singleLine="true"
            android:text="法律"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:visibility="gone"
            android:textColor="@color/text_black"
            android:textSize="@dimen/txt_size_twelve" />

        <TextView
            android:id="@+id/tab4"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/shape_mine_tab2"
            android:gravity="center"
            android:text="生物"
            android:singleLine="true"
            android:paddingRight="5dp"
            android:visibility="gone"
            android:paddingLeft="5dp"
            android:textColor="@color/text_black"
            android:textSize="@dimen/txt_size_twelve" />

        <TextView
            android:id="@+id/tab5"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/shape_mine_tab2"
            android:gravity="center"
            android:singleLine="true"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:text="环境"
            android:visibility="gone"
            android:textColor="@color/text_black"
            android:textSize="@dimen/txt_size_twelve"
            />

    </LinearLayout>
    <ImageView
        android:id="@+id/text_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_edit2"
        android:padding="8dp"
        android:layout_alignBottom="@id/linear_tab"
        android:layout_toRightOf="@id/linear_tab"
        android:visibility="gone"

        />
   <RelativeLayout
       android:id="@+id/relative_center"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/linear_tab"

       >
       <TextView
           android:id="@+id/txt_pingJia"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="15dp"
           android:layout_marginTop="10dp"
           android:text="这篇文章如何"
           android:textColor="@color/text_black"
           android:textSize="@dimen/txt_size_fifteen" />

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_marginRight="15dp"
           android:layout_marginTop="10dp"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/txt_pinDao"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="频道:"
               android:textColor="@color/gray_dan"
               android:textSize="@dimen/txt_size_fifteen"
               />

           <TextView
               android:id="@+id/tv_channelName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="军事"
               android:textColor="@color/tab_2_day"
               android:textSize="@dimen/txt_size_fifteen" />
       </LinearLayout>

       <TextView
           android:id="@+id/tv_bad"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/txt_pingJia"
           android:layout_marginLeft="60dp"
           android:layout_marginTop="3dp"
           android:clickable="true"
           android:drawableLeft="@mipmap/icon_bad"
           android:gravity="center_vertical"
           android:padding="12dp"
           android:text="  不喜欢"
           android:visibility="gone"
           android:textColor="@color/txt_color_dark"
           android:textSize="@dimen/txt_size_thirteen" />

       <TextView
           android:id="@+id/tv_like"
           android:layout_width="153dp"
           android:layout_height="43dp"
           android:layout_below="@id/txt_pingJia"
           android:clickable="true"
           android:drawableLeft="@mipmap/icon_like_none"
           android:paddingLeft="45dp"
           android:gravity="center_vertical"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="28dp"
           android:background="@drawable/shape_detail_like_bg_1"
           android:text="  精彩"
           android:textColor="@color/txt_color_dark"
           android:textSize="@dimen/txt_size_fifteen"
           android:layout_marginBottom="33dp"
           />
   </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relative_center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/subscribe_item_disabled_bg_day" />
    <TextView
        android:id="@+id/txt_fanKui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="13dp"
        android:text="我要反馈"
        android:textColor="@color/text_black"
        android:textSize="@dimen/txt_size_fifteen" />

    <GridLayout
        android:id="@+id/gridView_newDetail"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/txt_fanKui"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:columnCount="3">

        <Button
            android:id="@+id/btn1"
            android:layout_width="101dp"
            android:layout_height="29dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/shape_newdetail_fankui_none"
            android:text="有错别字"
            android:visibility="gone"
            android:textColor="@color/txt_color_dark"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="@dimen/txt_size_fourteen" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="101dp"
            android:layout_height="29dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/shape_newdetail_fankui_none"
            android:text="图文无关"
            android:textColor="@color/txt_color_dark"
            android:visibility="gone"
            android:textSize="@dimen/txt_size_fourteen"
            style="?android:attr/borderlessButtonStyle"

            />

        <Button
            android:id="@+id/btn3"
            android:layout_width="101dp"
            android:layout_height="29dp"
            android:background="@drawable/shape_newdetail_fankui_none"
            android:text="申请跟踪报道"
            android:visibility="gone"
            android:textColor="@color/txt_color_dark"
            android:textSize="@dimen/txt_size_fourteen"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/btn4"
            android:layout_width="101dp"
            android:layout_height="29dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_newdetail_fankui_none"
            android:text="标题党"
            android:textColor="@color/txt_color_dark"
            android:visibility="gone"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="@dimen/txt_size_fourteen" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="101dp"
            android:layout_height="29dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_newdetail_fankui_none"
            android:text="申请精翻翻译"
            android:textColor="@color/txt_color_dark"
            android:textSize="@dimen/txt_size_fourteen"
            style="?android:attr/borderlessButtonStyle"
            android:visibility="gone"

            />

        <Button
            android:id="@+id/btn6"
            android:layout_width="101dp"
            android:layout_height="29dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_newdetail_fankui_none"
            android:text="搞不懂"
            android:visibility="gone"
            android:textColor="@color/txt_color_dark"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="@dimen/txt_size_fourteen"

            />
    </GridLayout>

    <TextView
        android:id="@+id/tv_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/gridView_newDetail"
        android:layout_marginTop="14dp"
        android:background="@color/subscribe_item_disabled_bg_day" />

    <TextView
        android:id="@+id/txt_xiangGuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_line"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:text="相关文章"
        android:textColor="@color/text_black"
        android:textSize="@dimen/txt_size_fifteen" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_xiangGuan"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:background="@color/subscribe_item_disabled_bg_day"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_xiangGuan1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            android:text="中国已获印度洋3个重要港口，潜艇1年16次现身印度洋"
            android:textColor="@color/txt_color_day"
            android:clickable="true"
            android:visibility="gone"
            android:textSize="@dimen/txt_size_fourteen" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dfdfdf" />

        <TextView
            android:id="@+id/tv_xiangGuan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            android:text="中国射长征11火箭有何优势，准备时间从1月缩短至1天"
            android:textColor="@color/txt_color_day"
            android:visibility="gone"
            android:clickable="true"
            android:textSize="@dimen/txt_size_fourteen" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dfdfdf" />

        <TextView
            android:id="@+id/tv_xiangGuan3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            android:text="坚定信心，确保如期全面打赢脱贫攻坚历史性决战——专访国务院扶贫办主任刘永富"
            android:textColor="@color/txt_color_day"
            android:clickable="true"
            android:visibility="gone"
            android:textSize="@dimen/txt_size_fourteen" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dfdfdf" />

        <TextView
            android:id="@+id/tv_xiangGuan4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            android:text="酒泉卫星发射中心党委书记换将：纪多接替夏晓鹏"
            android:textColor="@color/txt_color_day"
            android:clickable="true"
            android:visibility="gone"
            android:textSize="@dimen/txt_size_fourteen" />

        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="#dfdfdf" />-->

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:paddingBottom="9dp"-->
            <!--android:paddingTop="9dp"-->
            <!--android:text="中孟联合建造两艘孟加拉海军大型反潜巡逻艇交付"-->
            <!--android:textColor="@color/txt_color_day"-->
            <!--android:textSize="@dimen/txt_size_fourteen"-->

            <!--/>-->

    </LinearLayout>



</RelativeLayout>