<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:background="@color/white">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/Industrial_Park_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/backImage"
                android:layout_width="match_parent"
                android:layout_height="125dp" />
            <RelativeLayout
                android:id="@+id/text_rel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/civi_rel_shape"
                android:paddingVertical="4dp"
                android:paddingHorizontal="4dp"
                android:alpha="0.7"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/recycler_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="杭州产业园"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:background="@drawable/shape5radius" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@id/text_rel"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                 android:layout_centerHorizontal="true">
                <TextView
                    android:id="@+id/textOne"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="科技"
                    android:textSize="11sp"
                    android:textColor="#fff"
                    android:layout_centerVertical="true"/>
                <View
                    android:layout_centerHorizontal="true"
                    android:layout_toRightOf="@id/textOne"
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:background="#fff"
                    android:layout_centerVertical="true"></View>
                <TextView
                    android:layout_marginHorizontal="5dp"
                    android:layout_toRightOf="@id/textOne"
                    android:id="@+id/textTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="研发"
                    android:textColor="#fff"
                    android:layout_centerVertical="true"/>
                <View
                    android:layout_toRightOf="@id/textTwo"
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:background="#fff"
                    android:layout_centerVertical="true"></View>
                <TextView
                    android:layout_marginHorizontal="5dp"
                    android:layout_toRightOf="@id/textTwo"
                    android:id="@+id/textThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="生产"
                    android:textColor="#fff"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <com.ansiyida.cgjl.view.cgjl_view.CornerFlagView
                android:id="@+id/text_mode"
                android:layout_width="52dp"
                android:layout_height="52dp"
                app:cfv_orientation="left"
                app:cfv_textContent="自荐"
                app:cfv_textColor="#fff"
                app:cfv_fullCorner="false"
                app:cfv_textSize="13sp" />
    </RelativeLayout>
</RelativeLayout>