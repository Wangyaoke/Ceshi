<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingHorizontal="15dp">

    <CheckBox
        android:paddingRight="15dp"
        android:id="@+id/recycler_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_size_fourteen"
        android:textColor="#666666"
        style="@style/MyCheckBox"
        android:layout_centerVertical="true">
    </CheckBox>
    <ImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/detail_image"
        android:layout_alignParentRight="true"
        android:layout_width="15dp"
        android:layout_height="30dp"
        android:background="@mipmap/project_jt"
        android:layout_centerVertical="true"></ImageView>
    <RelativeLayout
        android:id="@+id/rel"
        android:layout_toLeftOf="@id/detail_image"
        android:layout_toRightOf="@id/recycler_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/title_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="uagugakkkkkkkkkkkkkkkkkkkkddsdsdsdsdsdsdsdsdsdsdskkkkkkkkkad"
            android:textColor="#333333"
            android:textSize="@dimen/txt_size_fourteen"></TextView>
        <TextView
            android:visibility="gone"
            android:layout_below="@id/title_content"
            android:id="@+id/recycler_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gauguagu"
            android:textColor="#4E86ED"
            android:background="#EAF1F8"
            android:paddingHorizontal="5dp"
            android:paddingBottom="2dp"
            android:textSize="@dimen/txt_size_twelve"
            android:gravity="center"
            ></TextView>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/recycler_address"
            android:layout_below="@id/title_content"
            android:id="@+id/reclcyer_resouce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gauguagugagu"
            android:textColor="#4E86ED"
            android:background="#EAF1F8"
            android:paddingHorizontal="5dp"
            android:paddingBottom="2dp"
            android:textSize="@dimen/txt_size_twelve"
            android:gravity="center"
            ></TextView>

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_below="@id/title_content"
           android:layout_alignParentRight="true"
            android:id="@+id/reclcyer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gauguagugagu"
            android:textSize="@dimen/txt_size_twelve"
            android:paddingHorizontal="5dp"
            android:paddingBottom="2dp"
            android:gravity="center"
            android:visibility="gone"
            ></TextView>
    </RelativeLayout>
    <View
        android:layout_below="@id/rel"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DFDFDF"></View>
</RelativeLayout>