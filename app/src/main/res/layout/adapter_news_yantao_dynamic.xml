<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_newsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size_sixteen"
            android:text="XXXXXXXXX"
            android:textColor="@color/txt_color_day"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="13dp"
            />
        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXXXXXXXXXXXXXXXXXX"
            android:textColor="@color/gray_dan"
            android:textSize="@dimen/txt_size_fourteen"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="13dp"
            android:layout_below="@id/tv_newsTitle"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:id="@+id/tv_zanCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_dan"
            android:textSize="@dimen/txt_size_twelve"
            android:text="XX"
            android:layout_toLeftOf="@+id/txt_zan"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            />
        <TextView
            android:id="@+id/txt_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_dan"
            android:textSize="@dimen/txt_size_twelve"
            android:text="赞"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="91dp"
            />
        <TextView
            android:id="@+id/tv_readCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_dan"
            android:textSize="@dimen/txt_size_twelve"
            android:text="XX"
            android:layout_toLeftOf="@+id/txt_read"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            />
        <TextView
            android:id="@+id/txt_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_dan"
            android:textSize="@dimen/txt_size_twelve"
            android:text="阅读"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="14dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/subscribe_item_disabled_bg_day"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            />
    </RelativeLayout>
</FrameLayout>