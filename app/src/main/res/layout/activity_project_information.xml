<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.cgjl_activity.ProjectInformationActivity">
    <include layout="@layout/second_view_top" android:id="@+id/include_top"></include>
    <View
        android:layout_marginTop="5dp"
        android:layout_below="@id/include_top"
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/F8F8F8"/>
    <TextView
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/viewLine"
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="#555555"
        android:textSize="@dimen/txt_size_sixteen"
        android:gravity="center"/>
    <RelativeLayout
        android:id="@+id/rel"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/FollowUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:src="@mipmap/button_close" />
        <TextView
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/FollowUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跟进提醒"
            android:textColor="@color/color_blue"
            android:layout_centerVertical="true"
            android:textSize="@dimen/txt_size_twelve"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/rel"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</RelativeLayout>