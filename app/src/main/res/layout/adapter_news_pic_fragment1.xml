<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="73dp"
            android:paddingBottom="4dp"
            android:layout_weight="2"
            android:paddingLeft="15dp"
            android:layout_marginRight="15dp"
            >

            <TextView
                android:id="@+id/title_pic_fragment1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:lineSpacingExtra="3dp"
                android:text="国内首次在网上司法拍卖波音747：顺丰3.2亿拍走两架"
                android:textColor="?attr/txt_color"
                android:textSize="@dimen/txt_size_sixteen" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/visible_sourceNews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="来源："
                        android:textSize="@dimen/txt_size_twelve" />

                    <TextView
                        android:id="@+id/newsSource_pic_fragment1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联合早报"
                        android:textSize="@dimen/txt_size_twelve" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/visible_sourceUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp"
                    >

                    <TextView
                        android:id="@+id/tv_zhiDing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/shape_zhi_ding"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="置顶"
                        android:textColor="#A90915"
                        android:textSize="@dimen/txt_size_ten"
                        android:visibility="gone"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        app:srcCompat="@mipmap/man_default_touxiang"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/user_touXiang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:text="来源："
                        android:visibility="gone"
                        android:textSize="@dimen/txt_size_twelve"

                        />

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="user_2154wwwwwwwwwwwwwwwwwwwwwwwww"
                        android:textSize="@dimen/txt_size_twelve" />
                </LinearLayout>

                <TextView
                    android:id="@+id/newsTime_pic_fragment1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="25分钟前"
                    android:layout_marginTop="3dp"
                    android:textSize="@dimen/txt_size_twelve"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/newsTalk_pic_fragment1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="38"
                    android:visibility="gone"
                    android:textSize="@dimen/txt_size_twelve" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论"
                    android:visibility="gone"
                    android:textSize="@dimen/txt_size_twelve" />

            </LinearLayout>

            <ImageView
                android:id="@+id/delete_pic_fragment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                app:srcCompat="@mipmap/icon_cha2"
                android:paddingLeft="6dp"
                android:paddingTop="3dp"
                android:paddingRight="6dp"
                android:paddingBottom="3dp"
                android:visibility="gone"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/onepic_rel"
            android:layout_width="109dp"
            android:layout_height="70dp"
            android:layout_marginRight="14dp"
            >
            <ImageView
                android:id="@+id/onePic_pic_fragment1"
                android:layout_width="109dp"
                android:layout_height="70dp"
                android:background="@mipmap/icon_placeholder" />
            <ImageView
                android:layout_width="109dp"
                android:layout_height="70dp"
                android:background="@mipmap/photo_box"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_vTime"
                android:layout_width="29dp"
                android:layout_height="12dp"
                android:text="03:11"
                android:textSize="@dimen/txt_size_nine"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/shape_bg_pic_num"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/icon_play"
                android:layout_centerInParent="true"
                android:visibility="gone"
                />
        </RelativeLayout>


    </LinearLayout>


    <TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_below="@id/relative"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    android:layout_marginTop="-1dp"
    android:background="@color/line_color" />
</RelativeLayout>