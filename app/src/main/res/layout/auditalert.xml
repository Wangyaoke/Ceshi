<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_photo_bottom"
    >
    <TextView
        android:id="@+id/Alert_Reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#000"
        android:gravity="center"
        android:padding="10dp"/>
    <RelativeLayout
        android:id="@+id/phone_rel"
        android:layout_below="@id/Alert_Reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="15dp">
        <TextView
            android:id="@+id/TEXT1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情可致电 "
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:textColor="#000"/>
        <TextView
           android:layout_toRightOf="@id/TEXT1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="010-5342-3345"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:textColor="@color/area_btn_textcolor"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="20dp"
        android:id="@+id/view"
        android:layout_below="@id/phone_rel"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ccc"/>
    <LinearLayout
        android:layout_below="@id/view"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/Cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="#fff"
            android:text="取消"
            android:textColor="@color/area_btn_textcolor"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#ccc"></View>
        <Button
            android:id="@+id/Determine_btn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="#fff"
            android:text="确定"
            android:textColor="@color/area_btn_textcolor"/>
    </LinearLayout>
</RelativeLayout>