<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:layout_marginTop="16dp"
       >

            <LinearLayout
                android:id="@+id/line_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/title_pic_fragment1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingExtra="3dp"
                    android:maxLines="2"
                    android:text="iphoneX制造成本几iphoneX制造成本几乎是4S两倍乎是4S两倍"
                    android:textColor="?attr/txt_color"
                    android:textSize="@dimen/txt_size_seventeen"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="31dp"
                    android:background="@color/line_color" />
                <ImageView
                    android:id="@+id/delete_pic_fragment1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="13dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:layout_toLeftOf="@id/line_text"
                    android:src="@mipmap/icon_list_college"
                    />
                          </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_text"
                android:layout_marginTop="10dp"

                android:orientation="horizontal">

               <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-11-07"
                    android:id="@+id/gonggao_time"
                    android:textSize="@dimen/txt_size_twelve"
                    android:layout_marginLeft="14dp"
                    />


            </LinearLayout>


        </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relative"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="16dp"
        android:background="@color/line_color" />

</RelativeLayout>