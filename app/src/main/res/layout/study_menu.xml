<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hui"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/studymenu_relative"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="10dp">
        <ImageView
            android:id="@+id/menu_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/study_menu"
            android:tint="#FF9A9C9C" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="目录"
            android:textSize="16sp"
            android:textColor="#FF333333"
            android:gravity="center"/>
    </LinearLayout>
    <View
        android:layout_below="@id/studymenu_relative"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/subscribe_seperate_line_day"></View>
    <TextView
        android:id="@+id/bottom_text"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/frame_shape"/>
    <android.support.v7.widget.RecyclerView
        android:layout_above="@id/bottom_text"
        android:layout_marginTop="5dp"
        android:layout_below="@id/studymenu_relative"
        android:id="@+id/study_menu_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="2dp">
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_above="@id/bottom_text"
        android:id="@+id/no_Catalog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="暂无目录"
        android:textSize="18sp"
        android:gravity="center"
        android:visibility="gone"/>
</RelativeLayout>