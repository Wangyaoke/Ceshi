<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/relative_jump"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="9dp"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/iv_touXiang_invitation"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/man_default_touxiang"
            android:layout_margin="14dp"
            />
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/icon_delete"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            />
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/iv_touXiang_invitation"
            android:layout_marginTop="14dp"
            android:layout_marginRight="15dp"
            >
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               >
               <TextView
                   android:id="@+id/tv_userName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/txt_size_fourteen"
                   android:textColor="@color/tab_2_day"
                   android:text="海盗旗"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="邀请您发表观点"
                   android:textSize="@dimen/txt_size_fourteen"
                   />
           </LinearLayout>
            <TextView
                android:id="@+id/tv_body_invitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oracle数据库运行越来越慢，应该怎么优化才能加快速度？"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="6dp"
                android:textSize="@dimen/txt_size_thirteen"
                android:textColor="@color/black_gray"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/iv_touXiang_invitation"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"

            >
            <TextView
                android:id="@+id/tv_optionCount_invitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/txt_size_twelve"
                android:textColor="@color/black_gray"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 观点"
                android:textSize="@dimen/txt_size_twelve"
                android:textColor="@color/black_gray"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_time_invitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-12-27"
            android:textSize="@dimen/txt_size_twelve"
            android:textColor="@color/black_gray"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="15dp"
            />


    </RelativeLayout>
</RelativeLayout>