<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="1dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle" >
            <gradient
                android:endColor="#ECEEEF"
                android:startColor="#ECEEEF" />
        </shape>
    </item>
    <!-- 背景部分 -->
    <!-- 形象的表达：bottom代表背景部分在上边缘超出阴影的高度，right代表背景部分在左边超出阴影的宽度（相对应的offset） -->
    <item
        android:left="0dp"
        android:top="2dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle" >
            <gradient
                android:endColor="#FFFFFF"
                android:startColor="#FFFFFF" />
        </shape>
    </item>
</layer-list>